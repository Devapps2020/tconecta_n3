<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <item>
        <shape android:shape="rectangle">
            <size
                android:width="150dp"
                android:height="40dp" />
            <solid android:color="@color/FC_blue_4" />
        </shape>
    </item>

    <!-- Overlay with same color as background-->
    <item
        android:top="20dp"
        android:bottom="-40dp"
        android:left="-280dp">
        <rotate
            android:fromDegrees="-80">
            <shape android:shape="rectangle">
                <size
                    android:width="80dp"
                    android:height="40dp" />
                <solid android:color="@color/FC_white" />
            </shape>
        </rotate>
    </item>

</layer-list>