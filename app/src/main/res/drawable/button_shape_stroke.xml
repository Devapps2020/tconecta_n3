<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:angle="0"
                android:startColor="@color/white"
                android:centerColor="@color/white"
                android:endColor="@color/white" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="50dp"
                android:top="10dp"
                android:right="50dp"
                android:bottom="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/white" />
        </shape>
    </item>

    <item>
        <shape>
            <gradient
                android:angle="0"
                android:startColor="@color/white"
                android:centerColor="@color/white"
                android:endColor="@color/white" />
            <corners
                android:radius="30dp" />
            <padding
                android:left="50dp"
                android:top="10dp"
                android:right="50dp"
                android:bottom="10dp" />
            <stroke
                android:width="1dp"
                android:color="@color/clear_blue" />
        </shape>
    </item>
</selector>