<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.ConectaBimbo" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/clear_blue</item>
        <item name="colorPrimary">@color/clear_blue</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/clear_blue</item>
        <item name="colorSecondaryVariant">@color/dusk_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash_app</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <!-- Base application theme. -->
    <style name="ConectaBimboLight" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorAccent">@color/clear_blue</item>
        <item name="colorPrimary">@color/clear_blue</item>
        <item name="colorPrimaryVariant">@android:color/transparent</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/clear_blue</item>
        <item name="colorSecondaryVariant">@color/dusk_blue</item>
        <item name="colorOnSecondary">@color/white</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
        <item name="android:windowBackground">@drawable/background_splash_header_2</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>

    </style>

    <style name="Theme.ConectaBimbo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.ConectaBimbo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

    <style name="Button.Primary" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/background_button_primary_selector</item>
        <item name="android:textColor">@drawable/background_button_primary_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button.reg" parent="TextAppearance.AppCompat.Widget.Button">
        <item name="android:background">@drawable/background_button_secondary_selector</item>
        <item name="android:textColor">@drawable/background_button_secondary_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

    <style name="Button.Secondary" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/background_button_secondary_selector</item>
        <item name="android:textColor">@drawable/background_button_secondary_text</item>
        <item name="android:fontFamily">@font/roboto_medium</item>
    </style>

</resources>