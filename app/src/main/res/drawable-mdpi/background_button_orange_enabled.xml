<?xml version="1.0" encoding="utf-8"?>
<ripple xmlns:android="http://schemas.android.com/apk/res/android" android:color="@color/colorPrimaryDark">
<item android:id="@android:id/mask">
    <shape android:shape="rectangle">

        <solid android:color="@color/colorRouteStatus" />

        <corners
            android:bottomLeftRadius="@dimen/_50sdp"
            android:bottomRightRadius="@dimen/_50sdp"
            android:topLeftRadius="@dimen/_50sdp"
            android:topRightRadius="@dimen/_50sdp" />
    </shape>
</item>

<item android:id="@android:id/background">
    <shape android:shape="rectangle">

        <solid android:color="@color/colorRouteStatus" />

        <stroke
            android:width="@dimen/_1sdp"
            android:color="@color/colorRouteStatus" />

        <corners
            android:bottomLeftRadius="@dimen/_50sdp"
            android:bottomRightRadius="@dimen/_50sdp"
            android:topLeftRadius="@dimen/_50sdp"
            android:topRightRadius="@dimen/_50sdp" />
    </shape>
</item>
</ripple>