<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_2"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Operacion exitosa"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_18sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/resumen_pago"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/off_white"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="OperaciÃ³n: "
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txt_concepto"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pago con Tarjeta"
                            android:gravity="right"
                            android:textColor="@color/brownish_grey"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Tarjeta: "
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txt_tarjeta"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="**** **** **** 1719"
                            android:textColor="@color/brownish_grey"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_comision"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Monto: "
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txt_monto"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="$10.00"
                            android:textColor="@color/brownish_grey"
                            android:fontFamily="@font/roboto_medium"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/layout_utilidad"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="No. Factura: "
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/txt_factura"
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="09876543"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="horizontal">

                        <TextView
                            android:paddingTop="@dimen/_2sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Tienda: "
                            android:fontFamily="@font/roboto_medium"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:orientation="vertical">


                            <TextView
                                android:id="@+id/txt_tienda"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="LA BANQUETERA"
                                android:paddingTop="@dimen/_2sdp"
                                android:textColor="@color/brownish_grey"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="@dimen/element_width"
                        android:layout_height="1sp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:background="@color/clear_blue" />

                    <TextView
                        android:id="@+id/txt_fecha"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="26-02-2019 12:11:16"
                        android:textColor="@color/brownish_grey"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:visibility="invisible"
                        android:id="@+id/dudas_recargas"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingTop="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:paddingBottom="@dimen/_10sdp"
                        android:text="SERVICIO OPERADO POR AKINET. EL PERIODO PARA LA APLICACIÃN DEL PAGO ES DE 25 HRS. PARA CUALQUIER DUDA LLAME AL 01 800 300 0808 O 91770277"
                        android:textColor="@color/brownish_grey"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_1sdp"
                        android:text="IMPORTANTE"
                        android:gravity="center_horizontal"
                        android:textColor="@color/brownish_grey"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_10sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:text="Conservar este comprobante para futuras aclaraciones"
                        android:textColor="@color/brownish_grey"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_30sdp"/>


                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Â¡GRACIAS POR SU VISITA!"
                        android:textColor="@color/brownish_grey"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:paddingBottom="@dimen/_10sdp"
                        android:gravity="center_horizontal"
                        android:text="ESTE NO ES UN COMPROBANTE FISCAL."
                        android:textColor="@color/brownish_grey"
                        android:fontFamily="@font/roboto_medium"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

                <TextView
                    android:visibility="gone"
                    android:id="@+id/text_cancelar"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_5sdp"
                    android:gravity="center_horizontal"
                    android:text="Pago realizado en efectivo"
                    android:textColor="@color/brownish_grey"
                    android:fontFamily="@font/roboto_medium"
                    android:textSize="@dimen/_12sdp" />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_compartir"
                        style="@style/Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:gravity="center"
                        android:text="@string/text_recarga_5"
                        android:textSize="@dimen/_10sdp" />

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_terminar"
                        style="@style/Button.Secondary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_button_47"
                        android:gravity="center"
                        android:enabled="true"
                        android:textSize="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

