<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_2"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="@dimen/_10sdp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_recarga_4"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_18sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/resumen_pago"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center_horizontal"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_ticket"
                            android:gravity="center_vertical"
                            android:orientation="vertical"
                            android:padding="@dimen/_20sdp">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="@string/text_recarga_ticket_monto"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/monto_recarga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="200.00 MXN"
                                    android:textColor="@color/brownish_grey"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="@string/text_recarga_ticket_tel"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/numero_recarga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1234567890"
                                    android:textColor="@color/brownish_grey"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>


                            <View
                                android:layout_width="@dimen/element_width"
                                android:layout_height="1sp"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@color/dusk_blue" />


                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal"
                                android:weightSum="10">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:minWidth="@dimen/_80sdp"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="@string/text_recarga_ticket_autorizacion"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp"
                                    android:layout_weight="1" />

                                <TextView
                                    android:id="@+id/autorizacion_recarga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1551204686"
                                    android:textColor="@color/brownish_grey"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_12sdp"
                                    android:gravity="right"
                                    android:layout_weight="9" />

                            </LinearLayout>

                            <LinearLayout
                                android:id="@+id/layout_folio"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="@string/text_recarga_ticket_folio"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/folio_recarga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="1234567821"
                                    android:textColor="@color/brownish_grey"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:gravity="left"
                                    android:text="@string/text_recarga_ticket_transaccion"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/transaccion_recarga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="09876543"
                                    android:layout_weight="1"
                                    android:gravity="right"
                                    android:textColor="@color/brownish_grey"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:orientation="horizontal">

                                <TextView
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    android:gravity="left"
                                    android:text="@string/text_recarga_ticket_tienda"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp" />

                                <TextView
                                    android:id="@+id/tienda_recarga"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="LA BANQUETERA"
                                    android:textColor="@color/brownish_grey"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textSize="@dimen/_12sdp" />

                            </LinearLayout>

                            <TextView
                                android:id="@+id/fecha_recarga"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:padding="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="26-02-2019 12:11:16"
                                android:textColor="@color/brownish_grey"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/text_premio_bimbo"
                                android:visibility="gone"
                                style="@style/Graphik_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:padding="@dimen/_10sdp"
                                android:text=""
                                android:textColor="@color/colorBimboGrayDark"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:id="@+id/dudas_recargas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingTop="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="PARA DUDAS O ACLARACIONES DE TU RECARGA MARCA *264 DE TU TELCEL."
                                android:textColor="@color/brownish_grey"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_10sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center"
                                android:text="@string/text_recarga_ticket_recuerda"
                                android:textColor="@color/brownish_grey"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_10sdp" />


                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:padding="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:text="@string/text_recarga_ticket_gracias"
                                android:textColor="@color/brownish_grey"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_12sdp" />

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingBottom="@dimen/_10sdp"
                                android:gravity="center_horizontal"
                                android:text="ESTE NO ES UN COMPROBANTE FISCAL."
                                android:textColor="@color/brownish_grey"
                                android:fontFamily="@font/roboto_medium"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/text_cancelar"
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_5sdp"
                            android:text="Pago realizado en efectivo"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                </LinearLayout>




            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|bottom"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_compartir"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="@string/text_recarga_5"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_terminar"
                    style="@style/Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_47"
                    android:gravity="center"
                    android:enabled="true"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>