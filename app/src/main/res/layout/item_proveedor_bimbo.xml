<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_weight="1"
    android:gravity="center">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:gravity="center">

        <ImageView
            android:id="@+id/profile_image"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_60sdp"
            android:src="@drawable/vendedor"/>

        <TextView
            android:id="@+id/text_nombre"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/brownish_grey"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_25sdp"
            android:layout_marginTop="@dimen/_5sdp"
            android:text="Juan LÃ³pez"
            android:maxLines="2"
            android:textSize="@dimen/_10sdp" />

        <TextView
            android:visibility="gone"
            android:id="@+id/text_dias"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Mar, Jue y Vie"
            android:maxLines="2"
            android:textSize="@dimen/_10sdp"
            android:gravity="center"/>

        <LinearLayout
            android:id="@+id/layout_disponible"
            android:visibility="gone"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                style="@style/Graphik_Regular"
                android:textColor="@color/colorBimboBlueDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:text="Disponible: "
                android:maxLines="2"
                android:textSize="@dimen/_8sdp" />

            <TextView
                android:textColor="@color/colorBimboBlueDark"
                android:id="@+id/text_monto_disponible"
                style="@style/Graphik_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:text="$0.00"
                android:textSize="@dimen/_8sdp" />

        </LinearLayout>




        <LinearLayout
            android:visibility="gone"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_40sdp"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_marca"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:src="@drawable/img1"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>