<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fincomún"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="26dp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_fincomun" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_20sdp">

                    <TextView
                        style="@style/Signika_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="0dp"
                        android:text="¡Último paso para \nterminar tu registro!"
                        android:textColor="@color/colorBimboGrayDark"
                        android:textSize="@dimen/_22sdp" />

                    <TextView
                        android:id="@+id/dudas_recargas"
                        style="@style/Graphik_Regular"
                        android:layout_width="@dimen/element_width"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="@dimen/_10sdp"
                        android:text="Crea tu usuario"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_15sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_15sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:gravity="left"
                        android:orientation="vertical">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingresar usuario"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/edit_user"
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/background_edittext_green"
                                android:digits="0123456789"
                                android:gravity="right"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:padding="0dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textCursorDrawable="@drawable/cursor_green"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/edit_usuario_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorRed"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <TextView
                            android:layout_marginTop="@dimen/_10sdp"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:gravity="left"
                            android:layout_height="wrap_content"
                            android:text="La contraseña debe contener: 8 caracteres, una letra mayúscula, una letra minuscula y 2 números"
                            android:textColor="@color/colorBimboBlueLight"
                            android:textSize="@dimen/_10sdp"
                            android:textStyle="bold"/>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Ingresar contraseña"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/edit_contrasenia_1"
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/background_edittext_green"
                                android:digits="0123456789"
                                android:gravity="right"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:padding="0dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textCursorDrawable="@drawable/cursor_green"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/edit_contrasenia_1_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorRed"
                                android:visibility="gone" />

                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_45sdp"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:orientation="vertical">

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Confirmar contraseña"
                                android:textColor="@color/black"
                                android:textSize="@dimen/_12sdp" />

                            <EditText
                                android:id="@+id/edit_contrasenia_2"
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:background="@drawable/background_edittext_green"
                                android:digits="0123456789"
                                android:gravity="right"
                                android:inputType="phone"
                                android:maxLength="10"
                                android:padding="0dp"
                                android:singleLine="true"
                                android:textColor="@color/black"
                                android:textCursorDrawable="@drawable/cursor_green"
                                android:textSize="@dimen/_14sdp"
                                android:textStyle="bold" />

                            <TextView
                                android:id="@+id/edit_contrasenia_2_line"
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_1sdp"
                                android:layout_alignParentBottom="true"
                                android:background="@color/colorRed"
                                android:visibility="gone" />

                        </RelativeLayout>

                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_continuar"
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/background_selector_green"
                        android:text="Finalizar"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_text_color"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>