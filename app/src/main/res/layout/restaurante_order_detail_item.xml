<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical"
    >

    <TableLayout
        android:id="@+id/table_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/background_ticket"
        android:orientation="vertical"
        android:paddingTop="5dp"
        android:paddingBottom="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="vertical"
                android:padding="7dp"
                android:text="TextView">

                <TextView
                    android:id="@+id/name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="Persona 1"
                    android:textSize="14sp"
                    android:textStyle="bold"/>

            </LinearLayout>

        </TableRow>

        <!-- Subtotal -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:text="TextView">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="Personas cubiertas"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/personas_cubiertas"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="(n)"
                    android:textColor="@color/coloTextPidelo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>

            </LinearLayout>

        </TableRow>

        <!-- Subtotal -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:text="TextView">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="Subtotal"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/subtotal"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="$3000.00"
                    android:textColor="@color/coloTextPidelo"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:layout_marginLeft="@dimen/_10sdp"/>

            </LinearLayout>

        </TableRow>

        <!-- Propina -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:text="TextView">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="Propina"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/propina"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="$0.00"
                    android:textColor="@color/coloTextPidelo"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </TableRow>

        <!-- Total -->
        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:weightSum="7">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_weight="2"
                android:orientation="horizontal"
                android:paddingTop="@dimen/_2sdp"
                android:text="TextView">

                <TextView
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_20sdp"
                    android:text="Total"
                    android:textSize="13sp" />

                <TextView
                    android:id="@+id/total"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="2"
                    android:gravity="right|center_vertical"
                    android:text="$3000.00"
                    android:textColor="@color/coloTextPidelo"
                    android:textSize="14sp"
                    android:textStyle="bold" />

            </LinearLayout>

        </TableRow>

    </TableLayout>

</RelativeLayout>