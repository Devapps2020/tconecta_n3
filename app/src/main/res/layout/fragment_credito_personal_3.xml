<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_1"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_credito_personal_43"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_20sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/illustrations_contratacion_credito_personal_115_x_95"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>

            <androidx.cardview.widget.CardView
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_80sdp"
                app:cardElevation="@dimen/_3sdp"
                app:cardUseCompatPadding="true"
                app:cardCornerRadius="@dimen/_3sdp"
                app:cardBackgroundColor="@color/white_two">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:padding="@dimen/_15sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:orientation="vertical"
                            android:gravity="center">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/icons_pagos_filled" />

                                <TextView
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/text_credito_personal_44"
                                    android:gravity="left"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp"/>

                                <TextView
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/text_credito_personal_23"
                                    android:gravity="right"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/dusk_blue"
                                    android:textSize="@dimen/_12sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="center_vertical"
                                android:orientation="horizontal">

                                <ImageView
                                    android:visibility="invisible"
                                    android:layout_width="@dimen/_20sdp"
                                    android:layout_height="@dimen/_20sdp"
                                    android:layout_gravity="center_vertical"
                                    android:src="@drawable/icons_cuota" />

                                <TextView
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_width="wrap_content"
                                    android:layout_height="match_parent"
                                    android:text="@string/text_credito_personal_45"
                                    android:gravity="left"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/brownish_grey"
                                    android:textSize="@dimen/_10sdp"/>

                                <TextView
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:layout_width="match_parent"
                                    android:layout_height="match_parent"
                                    android:text="@string/text_credito_personal_46"
                                    android:gravity="right"
                                    android:fontFamily="@font/roboto_medium"
                                    android:textColor="@color/brownish_grey"
                                    android:textSize="@dimen/_10sdp"/>

                            </LinearLayout>

                        </LinearLayout>
                    </LinearLayout>



                </LinearLayout>


            </androidx.cardview.widget.CardView>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_credito_personal_47"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/dusk_blue"
                android:gravity="left"
                android:textSize="@dimen/_12sdp"/>

            <TextView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_credito_personal_48"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/brownish_grey"
                android:gravity="left"
                android:textSize="@dimen/_10sdp"/>

            <androidx.cardview.widget.CardView
                android:id="@+id/card_bimbo"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_5sdp"
                android:padding="@dimen/_30sdp"
                android:layout_margin="@dimen/_1sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_60sdp"
                    android:orientation="horizontal"
                    android:gravity="center"
                    android:layout_margin="@dimen/_10sdp">

                    <ImageView
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/illustrations_cargar_saldo_100_x_100"/>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:paddingLeft="@dimen/_10sdp">

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_credito_personal_49"
                            android:gravity="left"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp"/>

                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="@string/text_credito_personal_50"
                            android:gravity="left"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/brownish_grey"
                            android:textSize="@dimen/_10sdp"
                            android:paddingTop="@dimen/_2sdp"/>

                    </LinearLayout>

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@drawable/expand_less_24_px"
                        android:rotation="180"
                        android:layout_gravity="center"/>

                </LinearLayout>

            </androidx.cardview.widget.CardView>

            <LinearLayout
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_credito_personal_51"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/dusky_blue"
                    android:gravity="left"
                    android:textSize="@dimen/_12sdp"/>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_credito_personal_52"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dusk_blue"
                    android:gravity="left"
                    android:textSize="@dimen/_10sdp"/>

                <TextView
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_credito_personal_53"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/dusky_blue"
                    android:gravity="left"
                    android:textSize="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center">

                    <ImageView
                        android:layout_width="@dimen/_100sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:src="@drawable/qr_barcode"/>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom"
                    android:layout_marginTop="@dimen/_40sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_solicitud"
                        style="@style/Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="REALIZAR PAGO"
                        android:gravity="center"
                        android:enabled="true"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>