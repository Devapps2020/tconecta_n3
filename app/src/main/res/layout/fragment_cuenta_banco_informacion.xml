<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_green"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_top">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Capturar identificaciÃ³n"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center"
        android:layout_marginTop="@dimen/_5sdp">

        <TextView
            style="@style/Graphik_Regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="1"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"
            android:layout_marginRight="@dimen/_30sdp"/>

        <TextView
            style="@style/Graphik_Regular"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="2"
            android:padding="@dimen/_10sdp"
            android:textColor="@color/colorGrayLight"
            android:textSize="@dimen/_16sdp"
            android:textStyle="bold"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient_gray"
            android:gravity="center"
            android:orientation="vertical">

            <TextView
                style="@style/Graphik_Regular"
                android:layout_width="@dimen/element_width"
                android:layout_height="wrap_content"
                android:text="@string/text_cuenta_banco_1"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold"
                android:gravity="left"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:layout_margin="@dimen/_30sdp"/>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Name"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_nombre"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Last names"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_apellido"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="DOB"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_nacimiento"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_42sdp"
                android:layout_marginTop="@dimen/_15sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:padding="0dp"
                    android:text="Gender"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <RadioGroup
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:orientation="horizontal">

                    <RadioButton
                        android:id="@+id/rad_genero_h"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Hombre"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:theme="@style/RadioButton" />

                    <RadioButton
                        android:id="@+id/rad_genero_m"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Mujer"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_13sdp"
                        android:textStyle="bold"
                        android:theme="@style/RadioButton" />

                </RadioGroup>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/background_edittext_green" />

            </RelativeLayout>

            <LinearLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_marginRight="@dimen/_10sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Interior #"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_weight="1"
                    android:layout_marginLeft="@dimen/_10sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Exterior #"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

            </LinearLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Zip"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Neighborhood"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="City"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    android:id="@+id/edit_email"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <RelativeLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:orientation="vertical">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="State"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <EditText
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@drawable/background_edittext_green"
                    android:gravity="right"
                    android:padding="0dp"
                    android:singleLine="true"
                    android:textColor="@color/colorAccent"
                    android:textCursorDrawable="@drawable/cursor_green"
                    android:textSize="@dimen/_14sdp"
                    android:textStyle="bold" />

            </RelativeLayout>

            <Button
                android:id="@+id/btn_confirmar"
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/_25sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/background_button_round_gray"
                android:text="Guardar cambios"
                android:textAllCaps="false"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txt_acceder"
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp"
                    android:text="Confirm"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>

