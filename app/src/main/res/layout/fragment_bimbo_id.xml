<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_1"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:text="@string/text_register_bimbo_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dusk_blue"
                android:textSize="@dimen/_20sdp"/>

        </LinearLayout>

        <TextView
            android:text="@string/text_register_bimbo_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="left"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/_12sdp"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="8sp" />

        <TextView
            android:visibility="gone"
            android:text="Datos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="left"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/dusk_blue"
            android:textSize="@dimen/_12sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center">

            <include
                android:id="@+id/edit_bimbo_id"
                layout="@layout/view_edit_text_sp"/>


            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_5sdp">



                <RadioButton
                    android:id="@+id/rd_gb_bimboId"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:theme="@style/RadioButton"/>                            />


                <TextView
                    android:id="@+id/tv_gb_bimboid"
                    style="@style/Signika_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_40sdp"
                    android:text="@string/text_access_31"
                    android:textSize="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/dusk_blue"
                    android:paddingLeft="@dimen/_10sdp"
                    android:gravity="left"/>

            </LinearLayout>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continuar"
            android:text="@string/text_continue"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:enabled="false"
            android:gravity="center"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


</LinearLayout>