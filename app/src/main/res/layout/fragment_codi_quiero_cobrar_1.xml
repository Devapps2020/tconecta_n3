<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/background">
    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingBottom="@dimen/_15sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:orientation="horizontal"
            android:gravity="center">

            <ImageView
                android:visibility="invisible"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_user"
                android:tint="@color/colorAccent"
                android:layout_margin="@dimen/_10sdp"/>

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:text="CoDi"
                android:textColor="@color/colorBimboGrayDark"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_25sdp"
                android:src="@drawable/ic_fincomun"
                android:layout_margin="@dimen/_10sdp"/>

        </LinearLayout>

        <TextView
            style="@style/Signika_Semibold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Quiero cobrar"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_26sdp"
            android:padding="@dimen/_5sdp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center">

                <Button
                    android:id="@+id/btn_devoluciones"
                    style="@style/Graphik_Medium"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:background="@drawable/background_button_blue_selector"
                    android:text="Devoluciones"
                    android:textAllCaps="false"
                    android:textColor="@color/colorBimboBlueLight"
                    android:textSize="@dimen/_14sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingRight="@dimen/_15sdp"
                    android:paddingLeft="@dimen/_15sdp">

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:text="Habilitar edición"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_12sdp" />

                        <CheckBox
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:buttonTint="@color/colorBimboBlueDark"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center_vertical"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp">

                        <CheckBox
                            android:id="@+id/checkBox"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_centerHorizontal="true"
                            android:layout_centerVertical="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:buttonTint="@color/colorBimboBlueDark"/>

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:text="Autenticar la identificación"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <TextView
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:gravity="left"
                        android:text="Cuenta"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/colorBimboBlueDark"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elige la cuenta del depòsito"
                        android:gravity="left"
                        android:textColor="@color/colorBimboGrayLight1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorBimboGrayLight1"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_cuenta_select"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="center_vertical"
                            android:inputType="textMultiLine"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp"
                            android:hint="Seleccionar cuenta"
                            android:textColorHint="#99FFFFFF"
                            android:lineSpacingExtra="@dimen/_10sdp"
                            android:text=""/>

                        <TextView
                            android:id="@+id/text_error_cuenta"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"/>

                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:orientation="horizontal"
                        android:layout_height="wrap_content">




                    <TextView
                        style="@style/Graphik_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:text="Monto"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:textColor="@color/colorBimboBlueDark"
                        android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="right"
                            android:layout_height="wrap_content">

                            <CheckBox
                                android:id="@+id/check_mount"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="@dimen/_15sdp"
                                android:layout_centerVertical="true"
                                android:buttonTint="@color/colorBimboBlueDark"/>

                        <TextView
                            android:id="@+id/btn_terminos"
                            style="@style/Signika_Semibold"
                            android:layout_marginTop="@dimen/_15sdp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingLeft="@dimen/_2sdp"
                            android:text="Sin monto"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            android:gravity="left"/>

                        </LinearLayout>



                    </LinearLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_10sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Escribir monto"
                            android:textColor="@color/colorBimboGrayLight1"
                            android:textSize="@dimen/_12sdp"/>

                        <EditText
                            android:id="@+id/edt_write_amount"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:hint="$0.00"
                            android:digits="0123456789"
                            android:background="@drawable/background_edittext_green"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/text_error_write_amount"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"/>

                    </RelativeLayout>


                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                         android:text="Concepto de pago"
                        android:textColor="@color/colorBimboGrayLight1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:gravity="left"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical">

                        <EditText
                            android:id="@+id/edt_payment_concept"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:digits="0123456789"
                            android:background="@drawable/background_edittext_green"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/text_error_payment_concept"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Referencia"
                            android:textColor="@color/colorBimboGrayLight1"
                            android:textSize="@dimen/_12sdp"/>

                        <EditText
                            android:id="@+id/edt_reference"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:digits="0123456789"
                            android:background="@drawable/background_edittext_green"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textStyle="bold"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp"
                            android:singleLine="true"/>

                        <TextView
                            android:id="@+id/text_error_reference"
                            android:visibility="gone"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"/>

                    </RelativeLayout>


                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:layout_marginBottom="@dimen/_20sdp">

                    <Button
                        android:id="@+id/btn_generar"
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/background_selector_green"
                        android:text="Generar QR"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_text_color"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>


            </LinearLayout>



            </LinearLayout>







    </ScrollView>



</LinearLayout>