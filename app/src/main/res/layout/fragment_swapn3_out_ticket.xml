<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_2"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:padding="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_30sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <TextView
                android:text="@string/text_swapn3_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="start"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dusk_blue"
                android:textSize="@dimen/_20sdp"/>

            <!--TextView
                android:text="@string/text_swapt1000_step1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="end"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dusky_blue"
                android:textSize="@dimen/_12sdp" /-->

        </LinearLayout>

        <TextView
            android:id="@+id/tv_description"
            android:text="@string/text_swapn3_out_description"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_8sdp"
            android:gravity="center"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/brownish_grey"
            android:textSize="@dimen/_12sdp"
            android:letterSpacing="0.02"
            android:lineSpacingExtra="8sp" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_continuar"
            android:text="@string/text_continue"
            style="@style/Button.Primary"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_30sdp"
            android:gravity="center"
            android:textSize="@dimen/_10sdp" />

    </LinearLayout>


</LinearLayout>