<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".helpers.HOcrActivity">

    <SurfaceView
        android:id="@+id/surface_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <View
        android:id="@+id/view_line_red"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_1sdp"
        android:background="@color/colorRed"
        android:layout_centerInParent="true"/>

    <TextView
        android:id="@+id/text_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:text="no text"
        android:visibility="gone"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:gravity="center"
        android:padding="@dimen/_15sdp"
        android:layout_marginBottom="@dimen/_10sdp">

        <Button
            android:id="@+id/btn_continue"
            android:visibility="gone"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/_30sdp"
            android:text="Continuar"
            android:textAllCaps="false"
            android:background="@drawable/background_selector_green"
            android:textSize="@dimen/_10sdp"
            android:enabled="true"
            android:textColor="@drawable/button_text_color"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <Button
            android:id="@+id/btn_cancel"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/_30sdp"
            android:text="Cancelar"
            android:textAllCaps="false"
            android:background="@drawable/background_selector_green"
            android:textSize="@dimen/_10sdp"
            android:enabled="true"
            android:textColor="@drawable/button_text_color"/>

    </LinearLayout>

    <ProgressBar
        android:id="@+id/progress_bar"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_25sdp"
        style="@android:style/Widget.ProgressBar.Horizontal"
        android:progress="10"
        android:progressTint="@color/star"
        android:layout_alignParentTop="true"
        android:layout_margin="@dimen/_10sdp"/>

    <TextView
        android:id="@+id/text_indicator"
        android:layout_width="match_parent"
        android:layout_margin="@dimen/_10sdp"
        android:layout_height="@dimen/_25sdp"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:text="10/20 datos enocntrados"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:textColor="@color/colorAccent"
        android:textSize="12dp"
        android:text="Por favor no muevas el dispositivo hasta terminar la captura"
        android:gravity="center"
        android:layout_marginTop="@dimen/_40sdp" />

</RelativeLayout>