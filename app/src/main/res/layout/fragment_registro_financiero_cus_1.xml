<?xml version="1.0" encoding="utf-8"?>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_splash_header_3"
        android:orientation="vertical">

        <include layout="@layout/view_menu_top"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:id="@+id/container"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center"
                android:padding="@dimen/_20sdp"
                android:orientation="vertical">



                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/financiero_cus_1_title"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_25sdp"
                    android:gravity="center"
                    android:fontFamily="@font/roboto_regular"
                    />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/financiero_cus_1_desc"
                    android:textColor="@color/brownish_grey"
                    android:textSize="@dimen/_14sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_margin="@dimen/_20sdp"/>

                <!--TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Si quieres abrir una cuenta bancaria necesitarás un comprobante de domicilio y tu identificación INE"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_14sdp"
                    android:layout_margin="@dimen/_20sdp"/-->


                <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|bottom"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/option_1"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="true"
                    android:gravity="center"
                    android:text="Ya tengo una cuenta"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/option_2"
                    style="@style/Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Abrir una cuenta nueva"
                    android:gravity="center"
                    android:enabled="true"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"/>

                </LinearLayout>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

