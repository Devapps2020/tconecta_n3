<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash_header_3">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="@dimen/_20sdp"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_15sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center_horizontal"
                android:padding="@dimen/_15sdp">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text= "@string/text_bienvenido_a_dinero_ya"
                    android:layout_gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_20sdp" />

                <ImageView
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:gravity="top"
                    android:src="@drawable/ic_fincomun" />

            </LinearLayout>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_adelanto_venta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                android:padding="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/white_two">

                    <ImageView
                        android:id="@+id/img_item_adelanto"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/illustrations_cr_dito_personal_56_x_56"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/iv_fincomun_adelanto"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_fincomun"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/img_item_adelanto"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txt_title_adelanto"
                        style="@style/FC_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:gravity="left|start"
                        android:text="Adelanto de venta"
                        android:textSize="@dimen/_13sdp"
                        android:layout_toRightOf="@id/img_item_adelanto"
                        android:layout_below="@id/iv_fincomun_adelanto"
                        android:layout_marginLeft="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/text_description_adelanto"
                        style="@style/FC_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|start"
                        android:text="Te adelantamos hasta 3 meses de tus cobros"
                        android:textColor="@color/FC_grey_1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_toRightOf="@id/img_item_adelanto"
                        android:layout_below="@+id/txt_title_adelanto"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_info_adelanto"
                        style="@style/FC_Medium"
                        android:background="@drawable/background_button_fc_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Más información"
                        android:textColor="@color/FC_white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_below="@id/text_description_adelanto"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_oferta"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                android:padding="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/white_two">

                    <ImageView
                        android:id="@+id/img_item_oferta"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/illustrations_cr_dito_personal_56_x_56"
                        android:layout_alignParentStart="true"
                        android:layout_alignParentTop="true"
                        android:layout_margin="@dimen/_10sdp"/>

                    <ImageView
                        android:id="@+id/iv_fincomun_oferta"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:src="@drawable/ic_fincomun"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@id/img_item_oferta"
                        android:layout_marginLeft="@dimen/_5sdp"/>

                    <TextView
                        android:id="@+id/txt_title_oferta"
                        style="@style/FC_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:gravity="left|start"
                        android:text="Préstamo personal"
                        android:textSize="@dimen/_13sdp"
                        android:layout_toRightOf="@id/img_item_oferta"
                        android:layout_below="@id/iv_fincomun_oferta"
                        android:layout_marginLeft="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/text_description_oferta"
                        style="@style/FC_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:gravity="left|start"
                        android:text="Hasta $16,000 en efectivo"
                        android:textColor="@color/FC_grey_1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_toRightOf="@id/img_item_oferta"
                        android:layout_below="@+id/txt_title_oferta"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:layout_marginTop="@dimen/_10sdp"/>

                    <TextView
                        android:id="@+id/tv_info_oferta"
                        style="@style/FC_Medium"
                        android:background="@drawable/background_button_fc_blue"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="right"
                        android:text="Más información"
                        android:textColor="@color/FC_white"
                        android:textSize="@dimen/_13sdp"
                        android:layout_below="@id/text_description_oferta"
                        android:paddingHorizontal="@dimen/_20sdp"
                        android:paddingVertical="@dimen/_5sdp"
                        android:layout_marginVertical="@dimen/_10sdp"
                        android:layout_alignParentRight="true"/>

                </RelativeLayout>

            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:id="@+id/card_recompra"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardElevation="@dimen/_3sdp"
                app:cardCornerRadius="@dimen/_3sdp"
                android:padding="@dimen/_15sdp"
                android:layout_margin="@dimen/_10sdp"
                android:visibility="gone">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:layout_margin="@dimen/_5sdp"
                    android:background="@color/white_two">

                    <ImageView
                        android:id="@+id/img_item_recompra"
                        android:layout_weight="1"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:src="@drawable/illustrations_cr_dito_personal_56_x_56"
                        android:layout_alignParentStart="true"
