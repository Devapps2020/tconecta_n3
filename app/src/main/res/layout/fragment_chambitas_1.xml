<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_splash_header_1"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include layout="@layout/view_menu_top"/>

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:padding="@dimen/_20sdp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_100sdp"
                    android:orientation="horizontal"
                    android:gravity="center">

                    <TextView
                        android:layout_weight="1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/text_chambitas_1"
                        android:gravity="left"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_20sdp"/>

                    <ImageView
                        android:layout_width="115dp"
                        android:layout_height="match_parent"
                        android:src="@drawable/illustration_chambitas"/>

                </LinearLayout>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_chambitas_2"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/warm_grey"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_30sdp"/>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_new_challenge"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:padding="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">

                    </RelativeLayout>



                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/illustrations_pagos_regionales_56_x_56"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_10sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_chambitas_3"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/dusk_blue"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:id="@+id/tv_title_cb_nuevas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_chambitas_16"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/brownish_grey"
                                android:textSize="@dimen/_10sdp"
                                android:paddingTop="@dimen/_2sdp"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_bg_cb_nuevas"
                            style="@style/Graphik_Medium"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/circle_notification_chambitas"
                            android:gravity="center"
                            android:text="15"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrayBlack1"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="visible" />


                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_challenge_active"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:padding="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">


                    </RelativeLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/illustrations_pagos_regionales_56_x_56"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_10sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_chambitas_5"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/dusk_blue"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:id="@+id/tv_title_cb_activas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:fontFamily="@font/roboto_regular"
                                android:gravity="left"
                                android:paddingTop="@dimen/_2sdp"
                                android:text="@string/text_chambitas_17"
                                android:textColor="@color/brownish_grey"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_bg_cb_activas"
                            style="@style/Graphik_Medium"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/circle_notification_chambitas"
                            android:gravity="center"
                            android:text="15"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrayBlack1"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="visible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/card_challenge_compliment"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/_3sdp"
                    app:cardCornerRadius="@dimen/_5sdp"
                    android:padding="@dimen/_30sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:layout_marginLeft="@dimen/_1sdp"
                    android:layout_marginRight="@dimen/_1sdp"
                    android:layout_marginBottom="@dimen/_1sdp">


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_horizontal">


                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_60sdp"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:layout_margin="@dimen/_10sdp">

                        <ImageView
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:layout_gravity="center_vertical"
                            android:src="@drawable/illustrations_pagos_regionales_56_x_56"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_weight="1"
                            android:paddingLeft="@dimen/_10sdp">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_chambitas_6"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/dusk_blue"
                                android:textSize="@dimen/_12sdp"/>

                            <TextView
                                android:id="@+id/tv_title_cb_completadas"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_chambitas_18"
                                android:gravity="left"
                                android:fontFamily="@font/roboto_regular"
                                android:textColor="@color/brownish_grey"
                                android:textSize="@dimen/_10sdp"
                                android:paddingTop="@dimen/_2sdp"/>

                        </LinearLayout>


                        <TextView
                            android:id="@+id/tv_bg_cb_cumplidas"
                            style="@style/Graphik_Medium"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_alignParentRight="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:background="@drawable/circle_notification_chambitas"
                            android:gravity="center"
                            android:text="15"
                            android:textAlignment="center"
                            android:textColor="@color/colorGrayBlack1"
                            android:textSize="@dimen/_8sdp"
                            android:visibility="visible" />

                    </LinearLayout>

                </androidx.cardview.widget.CardView>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>



</RelativeLayout>