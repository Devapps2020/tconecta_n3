<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fincomún"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_fincomun"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        style="@style/Signika_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="0dp"
                        android:text="Confirmación de retiro"
                        android:textColor="@color/colorBimboGrayDark"
                        android:textSize="@dimen/_22sdp" />

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:text="Por favor confirma si los datos son\ncorrectos y da clic en Confirmar"
                        android:textColor="@color/colorBimboGrayDark"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_10sdp"
                    android:gravity="center">

                    <LinearLayout
                        android:id="@+id/layout_alguien_mas"
                        android:background="@drawable/background_button_tabs_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text="Para alguien más"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textview_numero_alguien_1"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="5512345678"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/textview_numero_alguien_2"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="1234567890"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/background_button_tabs_1"
                        android:orientation="vertical"
                        android:padding="@dimen/_15sdp">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text="Cuenta de retiro"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textview_cuenta"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="5512345678"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp" />

                        <TextView
                            android:id="@+id/textview_nombre"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="1234567890"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/background_button_tabs_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_15sdp">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text="Monto"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textview_monto_retiro"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="$200"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp"
                            android:layout_marginBottom="@dimen/_5sdp"/>

                        <TextView
                            android:id="@+id/textview_comision_retiro"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Disposición de Efectivo en Cajero Automático de otras Entidades Financieras."
                            android:textColor="@color/colorRed"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/background_button_tabs_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_15sdp">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text="Concepto"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textview_concepto_retiro"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="Lorem ipsum dolor sitamet"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:background="@drawable/background_button_tabs_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:padding="@dimen/_15sdp">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text="Fecha de operación"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/textview_fecha_operacion"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="left"
                            android:text="26/11/2020"
                            android:textColor="@color/colorBimboBlueDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>



                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/button_confirmacion_retiro"
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/background_selector_green"
                        android:text="Confirmar"
                        android:textAllCaps="false"
                        android:textColor="@drawable/button_text_color"
                        android:textSize="@dimen/_14sdp" />

                    <Button
                        android:id="@+id/btn_regresar"
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:background="@drawable/background_button_round_blue"
                        android:textColor="@color/colorBimboBlueLight"
                        android:text="Regresar"
                        android:textAllCaps="false"
                        android:textSize="@dimen/_14sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>