<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_green"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_top">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cuenta de banco"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"/>

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:orientation="horizontal"
            android:gravity="center"
            android:paddingTop="@dimen/_5sdp">

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="1"
                android:layout_marginRight="@dimen/_30sdp"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_22sdp"
                android:textStyle="bold"/>

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="2"
                android:layout_marginRight="@dimen/_30sdp"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_18sdp"/>

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="3"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_18sdp"/>

        </LinearLayout>

        <ScrollView
            android:background="@drawable/background_image_gray"
            android:textColor="@color/colorGrayBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Dirección"
                    android:textColor="@color/colorGrayBlack"
                    android:textSize="@dimen/_20sdp"
                    android:padding="0dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_25sdp"/>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Calle"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"/>

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorGrayBlack"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/element_width"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_10sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="Interior #"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            />

                        <EditText
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_gray"
                            android:textCursorDrawable="@drawable/cursor_gray"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:singleLine="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/element_width"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="Exterior #"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            />

                        <EditText
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_gray"
                            android:textCursorDrawable="@drawable/cursor_gray"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:singleLine="true"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Código postal"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorGrayBlack"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Colonia"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorGrayBlack"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Ciudad"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorGrayBlack"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Estado"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorGrayBlack"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <Button
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="@string/text_confirm"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/background_button_round_blue"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorGrayBlack" />

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Salir"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:padding="0dp"
                    android:layout_marginBottom="@dimen/_20sdp"/>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>