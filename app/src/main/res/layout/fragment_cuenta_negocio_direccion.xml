<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Cuenta"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_power"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="@dimen/_20sdp"
                    android:text="Negocio"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_30sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Tienda"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"/>

                    <EditText
                        android:id="@+id/edit_nombre"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Calle"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold"
                        />

                    <EditText
                        android:id="@+id/edit_apellido"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:layout_width="@dimen/element_width"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_10sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="No. Exterior"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            />

                        <EditText
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_gray"
                            android:textCursorDrawable="@drawable/cursor_gray"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:singleLine="true"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/element_width"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="No. Interior"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_12sdp"
                            android:textStyle="bold"
                            />

                        <EditText
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_gray"
                            android:textCursorDrawable="@drawable/cursor_gray"
                            android:gravity="right"
                            android:padding="0dp"
                            android:textColor="@color/colorAccent"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:singleLine="true"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="CÃ³digo postal"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Colonia"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Ciudad"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Estado"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:textStyle="bold" />

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <RelativeLayout
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@drawable/background_round_withe"
                        android:gravity="center">

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:src="@drawable/ic_add_photo"
                            android:tint="@color/colorGrayBlack" />

                        <ImageView
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:layout_centerInParent="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:src="@drawable/ic_add_photo"
                            android:tint="@color/colorGrayBlack" />

                    </RelativeLayout>

                    <EditText
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_80sdp"
                        android:background="@android:color/transparent"
                        android:textCursorDrawable="@drawable/cursor_gray"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/colorAccent"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"
                        android:text="Foto de fachada"/>

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_confirmar"
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="Guardar cambios"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/background_button_round_green"
                    android:textSize="@dimen/_14sdp"
                    android:textColor="@color/colorAccent" />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/txt_acceder"
                        style="@style/Graphik_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/text_cancel"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_10sdp"/>

                </LinearLayout>

                <include layout="@layout/item_menu_opciones_bottom"/>

            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>
