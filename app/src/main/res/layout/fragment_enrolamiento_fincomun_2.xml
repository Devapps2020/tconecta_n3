<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fincomún"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/img_fincomun"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_fincomun"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:paddingTop="@dimen/_30sdp">

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Crear cuenta"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_30sdp" />

            <TextView
                android:id="@+id/dudas_recargas"
                style="@style/Graphik_Regular"
                android:layout_width="@dimen/element_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_10sdp"
                android:gravity="left"
                android:lineSpacingMultiplier="1.2"
                android:padding="@dimen/_10sdp"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_10sdp" />

            <LinearLayout
                android:id="@+id/layout_error"
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_35sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_15sdp"
                android:background="@drawable/background_round_red"
                android:elevation="@dimen/_10sdp"
                android:gravity="center"
                android:orientation="horizontal"
                android:paddingLeft="@dimen/_15sdp"
                android:paddingRight="@dimen/_15sdp"
                android:visibility="gone">

                <TextView
                    android:id="@+id/text_error"
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:gravity="left"
                    android:text="Cuenta no verificada"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_12sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_alert"
                    android:tint="@color/colorAccent" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/_15sdp"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingresar usuario"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edit_usuario"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_usuario_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"
                        android:visibility="gone" />

                </RelativeLayout>

                <TextView
                    android:layout_marginTop="@dimen/_40sdp"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="La contraseña debe contener: 8 caracteres, una letra mayúscula, una letra minuscula y 2 números"
                    android:textColor="@color/colorBimboBlueLight"
                    android:textSize="@dimen/_10sdp"
                    android:textStyle="bold"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Ingresar contraseña"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edit_contrasenia_1"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_contrasenia_1_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"
                        android:visibility="gone" />

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_45sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Confirmar contraseña"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edit_contrasenia_2"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:digits="0123456789"
                        android:gravity="right"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/edit_contrasenia_2_line"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"
                        android:visibility="gone" />

                </RelativeLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_continuar"
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:layout_marginTop="@dimen/_40sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/background_selector_green"
                android:enabled="false"
                android:text="Continuar"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color"
                android:textSize="@dimen/_12sdp" />


            <Button
                android:visibility="invisible"
                android:id="@+id/btn_cancelar"
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/button_height"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:layout_marginBottom="@dimen/_20sdp"
                android:background="@drawable/background_selector_green"
                android:textSize="@dimen/_12sdp"
                android:enabled="true"
                android:textColor="@drawable/button_text_color" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>