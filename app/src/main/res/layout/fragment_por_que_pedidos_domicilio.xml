<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_green"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/container_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@drawable/shadow"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient_green"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:layout_marginTop="@dimen/header_top">

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pedidos a domicilio"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_20sdp"/>

            <ImageView
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:tint="@color/colorGrayBlack"
                android:src="@drawable/ic_back"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_2sdp"/>

            </RelativeLayout>

            <ImageView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_98sdp"
                android:tint="@color/colorDryGreen"
                android:src="@drawable/ic_home"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_1sdp"/>


        </LinearLayout>

        <ScrollView
            android:background="@drawable/background_image_gray"
            android:textColor="@color/colorGrayBlack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/_262sdp"
                    android:layout_height="@dimen/_117sdp"
                    android:text="@string/text_ordens_home_1"
                    android:textColor="@color/colorGrayBlack"
                    android:textSize="@dimen/_30sdp"
                    android:padding="0dp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_25sdp"/>


                <RelativeLayout
                    android:layout_width="@dimen/_286sdp"
                    android:layout_height="@dimen/_126sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/_286sdp"
                        android:layout_height="@dimen/_126sdp"
                        android:padding="0dp"
                        android:text="@string/text_ordens_home_2"
                        android:textColor="@color/colorPrimaryDark"
                        android:textSize="@dimen/_16sdp"
                        android:lineSpacingExtra="@dimen/_2sdp"
                     />

                </RelativeLayout>

                <Button
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="Comenzar"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/background_button_round_blue"
                    android:textSize="@dimen/_12sdp"
                    android:textColor="@color/colorGrayBlack" />

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Cancelar"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:padding="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_20sdp"/>

            </LinearLayout>

        </ScrollView>


    </LinearLayout>

</LinearLayout>