<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_marginStart="@dimen/_10sdp"
    android:layout_marginEnd="@dimen/_10sdp"
    android:id="@+id/layout_item_financiero"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/clear_blue"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp"/>

    <TextView
        android:visibility="gone"
        android:id="@+id/tv_tipo_movimiento"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/dusk_blue"
        android:textSize="@dimen/_12sdp"
        android:layout_marginBottom="@dimen/_5sdp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <ImageView
            android:id="@+id/iv_card"
            android:layout_width="30dp"
            android:layout_height="24dp"
            android:src="@drawable/ic_shopping_cart_24dp"
            />

        <TextView
            android:id="@+id/tv_card_aut"
            android:layout_weight="2"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="***1234 AUT 34584"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/dusk_blue"
            android:textSize="@dimen/_12sdp"
            />

        <TextView
            android:id="@+id/tv_amount"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="$0.00"
            android:textAlignment="textEnd"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/clear_blue"
            android:textSize="@dimen/_12sdp"
            />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="dd/mm/aaaa 00:00 hrs"
        android:fontFamily="@font/roboto_regular"
        android:textSize="@dimen/_10sdp"
        />

    <LinearLayout
        android:id="@+id/layout_commission"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_rf_item_tasa"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/clear_blue"
            android:textSize="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tv_commission"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10.00"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/clear_blue"
            android:textSize="@dimen/_10sdp"
            />

        <TextView
            android:id="@+id/tv_status"
            android:visibility="gone"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="En trÃ¡nsito"
            android:textAlignment="textEnd"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/clear_blue"
            android:textSize="@dimen/_10sdp"
            />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/layout_net_amount"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical">

        <TextView
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:textAlignment="textEnd"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/dusk_blue"
            android:textSize="@dimen/_12sdp"
            />

        <TextView
            android:id="@+id/tv_net_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="0.00"
            android:fontFamily="@font/roboto_medium"
            android:textColor="@color/dusk_blue"
            android:textSize="@dimen/_12sdp"
            />

    </LinearLayout>

</LinearLayout>



