<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/blurry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/container_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient_blue"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:tint="@color/colorGreenLight"
                android:src="@drawable/ic_conectando"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_5sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:text="Conectando con mPOS"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_18sdp" />

                <pl.droidsonroids.gif.GifImageView
                    android:id="@+id/img_cargando"
                    style="@style/Signika_Semibold"
                    android:layout_width="36dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:scaleType="centerInside"
                    android:src="@drawable/cargando"
                    android:textSize="@dimen/_20sdp"
                    android:tint="#ACD32E" />

            </LinearLayout>

            <Button
                android:id="@+id/btn_cancelar"
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_alert_width"
                android:layout_height="@dimen/button_alert_height"
                android:background="@drawable/background_button_green_selector"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_5sdp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>