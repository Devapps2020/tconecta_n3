<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_1"
    android:orientation="vertical">

    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:padding="@dimen/_20sdp"
        android:orientation="vertical">

        <ScrollView
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true"
            android:layout_weight="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_20sdp">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/financiero_ocr_1_foto"
                    android:textColor="@color/dusk_blue"
                    android:fontFamily="@font/roboto_regular"
                    android:textSize="@dimen/_14sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center"/>

                <RelativeLayout
                    android:layout_marginTop="@dimen/_20sdp"
                    android:visibility="visible"
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_140sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nota_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="@color/dusk_blue"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Identificación frontal"
                        android:textSize="@dimen/_12sdp"/>

                    <!--ImageView
                        android:id="@+id/img_add_photo_frente"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_add_photo"
                        android:tint="@color/colorAccent" /-->

                    <ImageView
                        android:id="@+id/img_photo_frente"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/text_nota_1"
                        android:background="@drawable/background_view_border_green"/>

                    <ImageView
                        android:id="@+id/img_add_photo_frente"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignTop="@id/img_photo_frente"
                        android:layout_alignBottom="@id/img_photo_frente"
                        android:src="@drawable/ic_add_photo"
                        app:tint="@color/dusk_blue" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@drawable/background_edittext_green"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <RelativeLayout
                    android:visibility="visible"
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_140sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:id="@+id/text_nota_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:textColor="@color/dusk_blue"
                        android:fontFamily="@font/roboto_regular"
                        android:text="Identificación posterior"
                        android:textSize="@dimen/_12sdp"/>

                    <!--ImageView
                        android:id="@+id/img_add_photo_detras"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_alignParentRight="true"
                        android:src="@drawable/ic_add_photo"
                        android:tint="@color/colorAccent" /-->

                    <ImageView
                        android:id="@+id/img_photo_detras"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_alignParentRight="true"
                        android:layout_below="@id/text_nota_2"
                        android:layout_margin="@dimen/_5sdp"
                        android:background="@drawable/background_view_border_green"/>

                    <ImageView
                        android:id="@+id/img_add_photo_detras"
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_centerHorizontal="true"
                        android:layout_alignTop="@id/img_photo_detras"
                        android:layout_alignBottom="@id/img_photo_detras"
                        android:src="@drawable/ic_add_photo"
                        app:tint="@color/dusk_blue" />

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:background="@drawable/background_edittext_green"
                        android:layout_alignParentBottom="true"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_continuar"
                        style="@style/Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:enabled="true"
                        android:gravity="center"
                        android:text="Continuar"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>


            </LinearLayout>

        </ScrollView>

    </LinearLayout>


</LinearLayout>
