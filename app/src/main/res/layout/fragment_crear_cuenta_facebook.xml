<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Crear una cuenta"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"/>

        <ImageView
            android:id="@+id/img_exit"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_power"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Qiubo obtendrÃ¡:"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_30sdp"
                android:layout_margin="@dimen/_40sdp"
                android:padding="0dp"/>

            <TextView
                style="@style/Graphik_Regular"
                android:layout_width="@dimen/element_width"
                android:layout_height="wrap_content"
                android:text="@string/text_facebook_account"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:lineSpacingExtra="@dimen/_3sdp"/>

            <Button
                android:id="@+id/btn_continuar"
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_width"
                android:layout_height="wrap_content"
                android:background="@drawable/background_button_round_green"
                android:text="Continuar como Genaro"
                android:textAllCaps="false"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp" />

            <TextView
                android:id="@+id/text_cancelar"
                style="@style/Graphik_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/text_cancel"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_12sdp"
                android:layout_marginTop="@dimen/_15sdp"/>

            <View
                android:layout_width="@dimen/button_width"
                android:layout_height="@dimen/_1sdp"
                android:background="@drawable/background_edittext_selected_green"
                android:layout_margin="@dimen/_15sdp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_personal_2"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_12sdp"
                    android:padding="0dp"/>

                <TextView
                    android:id="@+id/text_acceder"
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/text_personal_4"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_12sdp"
                    android:paddingLeft="10dp"/>

            </LinearLayout>



        </LinearLayout>

    </LinearLayout>

</LinearLayout>