<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_green"
    android:orientation="vertical"
    android:gravity="center">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <ImageView
            android:id="@+id/img_back"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_back"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/_20sdp"
            android:src="@drawable/ic_help"
            android:tint="@color/colorAccent" />

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:layout_marginTop="@dimen/header_top"
        android:background="@color/colorWithe"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="@dimen/_10sdp">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/draw_sign"
                    android:textColor="@color/colorGrayBlack"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_30sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentLeft="true"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="1sp"
                    android:layout_weight="1" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:id="@+id/text_clear_sign"
                    android:layout_width="@dimen/_75sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/clear_sign"
                    android:textColor="@color/colorGrayBlack"
                    android:textSize="@dimen/_14sdp"
                    android:layout_centerVertical="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_30sdp"/>

            </LinearLayout>

            <com.blm.qiubopay.helpers.views.HSignatureView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"/>

            <View
                android:layout_width="@dimen/_400sdp"
                android:layout_height="@dimen/_10sdp"
                android:layout_margin="@dimen/_10sdp"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:background="@drawable/dotted_line"/>

        </RelativeLayout>

    </LinearLayout>

    <Button
        android:id="@+id/btn_continuar"
        style="@style/Signika_Semibold"
        android:layout_width="@dimen/button_width"
        android:layout_height="@dimen/button_height"
        android:text="@string/text_continue"
        android:textAllCaps="false"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/background_selector_blue"
        android:textSize="@dimen/_12sdp"
        android:textColor="@color/colorAccent" />

</LinearLayout>
