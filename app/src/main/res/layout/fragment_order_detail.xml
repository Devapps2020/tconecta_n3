<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_2"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:id="@+id/rlBackFromDetail"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentLeft="true"
            android:gravity="center">

            <ImageView
                android:id="@+id/ivBackArrow"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_back"
                app:tint="@color/clear_blue" />

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rlHelp"
            android:layout_width="60dp"
            android:layout_height="80dp"
            android:layout_alignParentRight="true"
            android:gravity="center"
            android:visibility="gone">

            <ImageView
                android:id="@+id/ivHelp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/live_help_24_px"
                app:tint="@color/clear_blue" />

        </RelativeLayout>

    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="15dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_detail_of"
                        android:textSize="24dp"
                        android:textColor="@color/FC_blue_6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/order_order"
                        android:textSize="24dp"
                        android:textStyle="bold"
                        android:textColor="@color/FC_blue_6" />

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="8dp"
                        android:text="@string/order_no_valid"
                        android:textSize="14dp"
                        android:textColor="@color/FC_blue_6"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="2">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@drawable/ilustrations_ticket" />

                </LinearLayout>

            </LinearLayout>

            <!--    Datos del cliente-->

            <TextView
                android:id="@+id/tvClientData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/order_client_data"
                android:textSize="16dp"
                android:textColor="@color/FC_blue_6"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvPhoneNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_cel_name"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6" />

            <TextView
                android:id="@+id/tvPhoneName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvOrderDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_date"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6" />

            <TextView
                android:id="@+id/tvOrderDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvOrderStatusLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_status_label"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvOrderStatus"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone"/>

            <TextView
                android:id="@+id/tvAddressLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_deliver_address"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"/>

            <TextView
                android:id="@+id/tvAddress"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="15dp"
                android:textSize="14dp" />

            <TextView
                android:id="@+id/tvMapLocation"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:padding="15dp"
                android:text="@string/order_map_location"
                android:textSize="18dp"
                android:textColor="@color/FC_blue_6"
                android:textStyle="bold"
                android:visibility="gone"/>

            <!--    Datos del pedido-->

            <TextView
                android:id="@+id/tvOrderData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/order_data"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvInvoiceNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_invoice_number"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvInvoiceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvReferenceNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_reference_number"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvReferenceNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvFolioNumberLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_invoice"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvFolioNumber"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <!--    Datos de facturaciÃ³n del cliente-->

            <TextView
                android:id="@+id/tvInvoiceDataClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/order_client_data"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRFCLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_rfc"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRFC"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBusinessNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_business_name"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvBusinessName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDateLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_date_label"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvDate"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStoreNameLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_store_name_label"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvStoreName"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvClientCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_client_code"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvClient"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <!--    Datos de ruta-->

            <TextView
                android:id="@+id/tvRouteData"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:layout_marginBottom="16dp"
                android:text="@string/order_route_data"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSellerLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_seller"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvSeller"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRouteCodeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_route_code"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvRouteCode"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTransactionTypeLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_transaction_type"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"
                android:visibility="gone" />

            <TextView
                android:id="@+id/tvTransactionType"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp"
                android:visibility="gone" />

            <!--    Desglose productos -->

            <TextView
                android:id="@+id/tvProductBreakdownLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:text="@string/order_products_list"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/FC_blue_6"/>

            <TextView
                android:id="@+id/tvProductsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_products"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"/>

            <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/rvProducts"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <!--    Desglose totales-->

            <TextView
                android:id="@+id/tvBreakdownOfTotalsLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="16dp"
                android:text="@string/order_totals"
                android:textSize="16dp"
                android:textStyle="bold"
                android:textColor="@color/FC_blue_6"/>

            <TextView
                android:id="@+id/tvTotalSaleLabel"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/order_total"
                android:textSize="14dp"
                android:textColor="@color/FC_blue_6"/>

            <TextView
                android:id="@+id/tvTotalSale"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="16dp"
                android:textSize="14dp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>
