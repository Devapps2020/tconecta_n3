<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_3"
    android:clickable="true"
    android:orientation="vertical">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_20sdp">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp"
            android:orientation="vertical">

            <ScrollView
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_weight="1">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:paddingBottom="@dimen/_30sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:id="@+id/tv_id_title"
                            android:text="@string/text_swapt1000_title"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="start"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_20sdp"/>

                        <TextView
                            android:id="@+id/tv_step"
                            android:text="@string/text_swapt1000_step2"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="end"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dusky_blue"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <TextView
                        android:id="@+id/tv_address_description"
                        android:text="@string/text_swapt1000_address_description"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_8sdp"
                        android:gravity="left"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/brownish_grey"
                        android:textSize="@dimen/_12sdp"
                        android:letterSpacing="0.02"
                        android:lineSpacingExtra="8sp" />

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_swap"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/edit_correo_electronico"
                            layout="@layout/view_edit_text_sp"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>

                        <include
                            android:id="@+id/edit_numero_celular"
                            layout="@layout/view_edit_text_sp"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_negocio"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/edit_nombre_comercio"
                            layout="@layout/view_edit_text_sp"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>

                    </LinearLayout>

                    <include
                        android:id="@+id/edit_calle_comercio"
                        layout="@layout/view_edit_text_sp"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_referencias"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/edit_crossing_streets"
                            layout="@layout/view_edit_text_sp"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>

                        <include
                            android:id="@+id/edit_references"
                            layout="@layout/view_edit_text_sp"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="@dimen/_2sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginRight="@dimen/_5sdp">

                            <include
                                android:id="@+id/edit_numero_exterior"
                                layout="@layout/view_edit_text_sp"/>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1">
                            <include
                                android:id="@+id/edit_numero_interior"
                                layout="@layout/view_edit_text_sp"/>

                        </LinearLayout>





                    </LinearLayout>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <include
                        android:id="@+id/edit_codigo_postal"
                        layout="@layout/view_edit_text_sp"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <include
                        android:id="@+id/edit_estado"
                        layout="@layout/view_edit_text_sp"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <include
                        android:id="@+id/edit_municipio"
                        layout="@layout/view_edit_text_sp"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <include
                        android:id="@+id/edit_colonia"
                        layout="@layout/view_edit_text_sp"/>

                    <androidx.legacy.widget.Space
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_20sdp"/>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_terminos_aviso"
                        android:layout_width="@dimen/element_width"
                        android:layout_height="wrap_content"
                        android:gravity="left"
                        android:orientation="vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp">

                        <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:gravity="center_vertical">

                            <RadioButton
                                android:id="@+id/rad_aceptar_tyc"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:theme="@style/RadioButton"/>

                            <TextView
                                android:id="@+id/btn_terminos"
                                style="@style/Signika_Semibold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/text_access_24"
                                android:textSize="@dimen/_10sdp"
                                android:fontFamily="@font/roboto_medium"
                                android:textColor="@color/clear_blue"
                                android:paddingLeft="@dimen/_10sdp"
                                android:paddingBottom="@dimen/_4sdp"
                                android:gravity="left"/>

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_colaborador"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                        <include
                            android:id="@+id/edit_colaborador"
                            layout="@layout/view_edit_text_sp"/>

                    </LinearLayout>


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|bottom"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_10sdp">

                        <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/btn_continuar"
                            style="@style/Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:enabled="false"
                            android:gravity="center"
                            android:text="@string/text_continue"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </ScrollView>


</LinearLayout>

