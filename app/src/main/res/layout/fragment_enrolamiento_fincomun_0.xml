<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/twilight_blue">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fincomún"
            android:textColor="@color/white"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/img_fincomun"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:layout_marginRight="@dimen/_20sdp"
                android:layout_marginLeft="@dimen/_20sdp"
                android:paddingBottom="@dimen/_15sdp">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="0dp"
                    android:text="Productos"
                    android:textColor="@color/colorBimboGrayDark"
                    android:textSize="@dimen/_22sdp" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_weight="1"
                    android:text="Si aún no eres cliente Fincomún puedes abrir tu cuenta digital básica sin ir a una sucursal."
                    android:textColor="@color/colorBimboGrayDark"
                    android:textSize="@dimen/_12sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_5sdp"
                android:paddingRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_15sdp">

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_5sdp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/_4sdp"
                    card_view:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tarjetas"
                        android:rotation="180"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:background="@color/colorTransparency"
                            android:rotation="180">

                            <TextView
                                style="@style/Graphik_Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Cuenta Básica Común Digital"
                                android:textSize="@dimen/_16sdp"
                                android:gravity="left"
                                android:textColor="@color/colorWithe"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/Graphik_Regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Limitada a"
                                    android:textSize="@dimen/_14sdp"
                                    android:gravity="left"
                                    android:textColor="@color/colorWithe"
                                    android:layout_marginBottom="@dimen/_5sdp"/>

                                <TextView
                                    style="@style/Graphik_Medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$5,000.00"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textSize="@dimen/_14sdp"
                                    android:gravity="left"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWithe"
                                    android:layout_marginBottom="@dimen/_5sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="vertical"
                                android:gravity="center|bottom"
                                android:layout_marginTop="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_contratar_cuenta"
                                    style="@style/Button.Secondary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Contratar"
                                    android:gravity="center"
                                    android:enabled="true"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>

                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:layout_gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_160sdp"
                    android:layout_weight="1"
                    android:elevation="@dimen/_5sdp"
                    card_view:cardUseCompatPadding="true"
                    card_view:cardElevation="@dimen/_4sdp"
                    card_view:cardCornerRadius="@dimen/_4sdp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/tarjetas"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical"
                            android:gravity="center_vertical"
                            android:paddingLeft="@dimen/_10sdp"
                            android:paddingRight="@dimen/_10sdp"
                            android:background="@color/colorTransparency">

                            <TextView
                                style="@style/Graphik_Medium"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Solicitud Crédito Fincomún"
                                android:textSize="@dimen/_16sdp"
                                android:gravity="left"
                                android:textColor="@color/colorWithe"
                                android:textStyle="bold"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/Graphik_Regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Desde "
                                    android:textSize="@dimen/_14sdp"
                                    android:gravity="left"
                                    android:textColor="@color/colorWithe"
                                    android:layout_marginBottom="@dimen/_5sdp"/>

                                <TextView
                                    style="@style/Graphik_Medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$1,000.00"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textSize="@dimen/_14sdp"
                                    android:gravity="left"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWithe"
                                    android:layout_marginBottom="@dimen/_5sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:orientation="horizontal">

                                <TextView
                                    style="@style/Graphik_Regular"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="Limitada a "
                                    android:textSize="@dimen/_14sdp"
                                    android:gravity="left"
                                    android:textColor="@color/colorWithe"
                                    android:layout_marginBottom="@dimen/_5sdp"/>

                                <TextView
                                    style="@style/Graphik_Medium"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="$5,000.00"
                                    android:layout_marginLeft="@dimen/_5sdp"
                                    android:textSize="@dimen/_14sdp"
                                    android:gravity="left"
                                    android:textStyle="bold"
                                    android:textColor="@color/colorWithe"
                                    android:layout_marginBottom="@dimen/_5sdp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="@dimen/_150sdp"
                                android:layout_height="@dimen/_30sdp"
                                android:orientation="vertical"
                                android:gravity="center|bottom"
                                android:layout_marginTop="@dimen/_10sdp">

                                <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/btn_contratar_credito"
                                    style="@style/Button.Secondary"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="Contratar"
                                    android:gravity="center"
                                    android:enabled="true"
                                    android:textSize="@dimen/_10sdp" />

                            </LinearLayout>


                        </LinearLayout>

                    </LinearLayout>

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:gravity="center|bottom"
                    android:layout_marginTop="@dimen/_10sdp">

                    <androidx.appcompat.widget.AppCompatButton
                        android:id="@+id/btn_login"
                        style="@style/Button.Primary"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Iniciar sesión"
                        android:gravity="center"
                        android:enabled="true"
                        android:layout_margin="@dimen/_25sdp"
                        android:textSize="@dimen/_10sdp" />

                </LinearLayout>

            </LinearLayout>



        </LinearLayout>

    </ScrollView>

</LinearLayout>