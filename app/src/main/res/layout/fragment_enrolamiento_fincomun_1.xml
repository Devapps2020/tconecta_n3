<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:background="@color/white">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="FincomÃºn"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/img_fincomun"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_fincomun"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Bienvenido"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_30sdp"
                    android:padding="0dp"/>

                <TextView
                    android:visibility="invisible"
                    style="@style/Graphik_Regular"
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:text="@string/text_login_3"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_15sdp"
                    android:lineSpacingExtra="@dimen/_3sdp"/>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginRight="@dimen/_40sdp"
                    android:layout_marginLeft="@dimen/_40sdp"
                    android:orientation="vertical">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="ID Bimbo"
                        android:gravity="center"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_18sdp" />

                    <EditText
                        android:layout_marginTop="@dimen/_20sdp"
                        android:id="@+id/edit_id_bimbo"
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_gray"
                        android:digits="0123456789"
                        android:gravity="center"
                        android:inputType="phone"
                        android:maxLength="10"
                        android:padding="0dp"
                        android:singleLine="true"
                        android:textColor="@color/white"
                        android:text="123456789"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:textSize="@dimen/_26sdp"
                        android:textStyle="bold" />

                </RelativeLayout>

                <Button
                    android:id="@+id/btn_continuar"
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="Confirmar"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_60sdp"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/background_selector_green"
                    android:textSize="@dimen/_12sdp"
                    android:enabled="true"
                    android:textColor="@drawable/button_text_color" />

                <Button
                    android:visibility="invisible"
                    android:id="@+id/btn_cancelar"
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="Cancelar"
                    android:textAllCaps="false"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:background="@drawable/background_selector_green"
                    android:textSize="@dimen/_12sdp"
                    android:enabled="true"
                    android:textColor="@drawable/button_text_color" />

            </LinearLayout>


        </LinearLayout>

    </ScrollView>

</LinearLayout>