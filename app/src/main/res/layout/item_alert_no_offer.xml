<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/background_rounded_blue_fincomun"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingHorizontal="@dimen/_10sdp"
        android:paddingBottom="@dimen/_10sdp">

        <ImageView
            android:id="@+id/imv_close"
            android:layout_width="@dimen/_20sdp"
            android:layout_height="@dimen/_20sdp"
            android:layout_gravity="end"
            android:background="@drawable/close_24_px"
            android:layout_marginTop="@dimen/_10sdp"
            android:visibility="invisible"
            />
        <ImageView
            android:id="@+id/imv_icon"
            android:layout_width="@dimen/_30sdp"
            android:layout_height="@dimen/_30sdp"
            android:src="@drawable/info_24_px"
            app:tint="@color/FC_blue_4" />
        <TextView
            style="@style/FC_Regular"
            android:id="@+id/text_title"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_10sdp"
            android:gravity="center"
            android:text="AÃºn no cuentas con oferta disponible"
            android:textColor="@color/FC_black"
            android:textSize="@dimen/_14sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_mensaje"
            style="@style/FC_Regular"
            android:layout_width="@dimen/_200sdp"
            android:layout_height="wrap_content"
            android:text="@string/FC_txt_no_offer"
            android:textColor="@color/FC_grey_1"
            android:textSize="@dimen/_10sdp"
            android:paddingVertical="@dimen/_5sdp"
            android:paddingHorizontal="@dimen/_15sdp"
            android:layout_marginTop="@dimen/_20sdp"/>





        <Button
            android:id="@+id/btn_offer"
            style="@style/Signika_Semibold"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="ME INTERESA UNA OFERTA"
            android:layout_marginTop="@dimen/_20sdp"
            android:textAllCaps="false"
            android:background="@drawable/background_selector_green"
            android:textColor="@drawable/button_text_color"
            android:textSize="@dimen/_10sdp" />

        <Button
            android:id="@+id/btn_acept"
            style="@style/FC_Regular"
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="CERRAR"
            android:textAllCaps="false"
            android:background="@drawable/background_button_fc_line_blue"
            android:textSize="@dimen/_10sdp" />


    </LinearLayout>

</LinearLayout>