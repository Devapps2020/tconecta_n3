<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_2"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:gravity="center"
        android:orientation="horizontal"
        android:visibility="gone">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/keyboard_backspace_24_px_2"
            android:visibility="visible" />

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text=""
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/live_help_24_px" />

    </LinearLayout>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:layout_marginTop="@dimen/_25sdp">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginHorizontal="@dimen/_15sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal"
                    android:weightSum="1">

                    <TextView
                        style="@style/FC_Medium"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_weight="0.7"
                        android:gravity="left|start"
                        android:text="Revisa lo solicitado"
                        android:textSize="@dimen/_14sdp" />

                    <ImageView
                        android:layout_width="@dimen/_80sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="0.3"
                        android:gravity="end|right"
                        android:src="@drawable/ic_fincomun" />

                </LinearLayout>

                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:background="@drawable/background_rounded_yellow_fincomun"
                    android:padding="@dimen/_10sdp">

                    <TableRow
                        android:id="@+id/tr_solicitas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:visibility="gone">

                        <TextView
                            style="@style/FC_Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:text="Solicitas:"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tv_amount_offer"
                            style="@style/FC_Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:text="$5000"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />
                    </TableRow>

                    <TableRow
                        android:id="@+id/tr_liquidas"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1"
                        android:visibility="gone">

                        <TextView
                            style="@style/FC_Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:text="Liquidas el crédito actual:"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tv_amount_insoluto"
                            style="@style/FC_Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:text="$5000"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            style="@style/FC_Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:text="Recibes:"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/tv_amount"
                            style="@style/FC_Medium"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.3"
                            android:gravity="right"
                            android:text="$5000"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />
                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TextView
                            style="@style/FC_Regular"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:layout_weight="0.7"
                            android:gravity="left"
                            android:text="Pagas:"
                            android:textColor="@color/FC_black"
                            android:textSize="@dimen/_14sdp" />

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="0.3"
                            android:orientation="vertical">

                            <TextView
                                android:id="@+id/tv_term_fee"
                                style="@style/FC_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="right"
                                android:text="18 x $346"
                                android:textColor="@color/FC_black"
                                android:textSize="@dimen/_14sdp" />

                            <TextView
                                android:id="@+id/tv_frequency_name"
                                style="@style/FC_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:gravity="right"
                                android:text="quincenas"
                                android:textColor="@color/FC_grey_1"
                                android:textSize="@dimen/_14sdp" />

                            <View
                                android:id="@+id/divider"
                                android:layout_width="match_parent"
                                android:layout_height="1dp"
                                android:background="?android:attr/listDivider" />

                            <TextView
                                android:id="@+id/tv_total_amount"
                                style="@style/FC_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:gravity="right"
                                android:text="Total $6,228"
                                android:textColor="@color/FC_black"
                                android:textSize="@dimen/_14sdp" />

                        </LinearLayout>


                    </TableRow>

                    <TableRow
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:weightSum="1">

                        <TableLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginVertical="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@drawable/background_rounded_yellow2_fincomun"
                            android:padding="@dimen/_10sdp">

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1">

                                <TextView
                                    style="@style/FC_Medium"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="left"
                                    android:text="Tasa de interés mensual:"
                                    android:textColor="@color/FC_black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/tv_tasa_mensual"
                                    style="@style/FC_Medium"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:gravity="right"
                                    android:text="%"
                                    android:textColor="@color/FC_black"
                                    android:textSize="@dimen/_14sdp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1">

                                <TextView
                                    style="@style/FC_Regular"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="left"
                                    android:text="Tasa de interés anual fija:"
                                    android:textColor="@color/FC_black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/tv_tasa"
                                    style="@style/FC_Medium"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:gravity="right"
                                    android:text="%"
                                    android:textColor="@color/FC_black"
                                    android:textSize="@dimen/_14sdp" />
                            </TableRow>

                            <TableRow
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:weightSum="1">

                                <TextView
                                    style="@style/FC_Regular"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.7"
                                    android:gravity="left"
                                    android:text="CAT:"
                                    android:textColor="@color/FC_black"
                                    android:textSize="@dimen/_14sdp" />

                                <TextView
                                    android:id="@+id/tv_cat"
                                    style="@style/FC_Medium"
                                    android:layout_width="0dp"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="0.3"
                                    android:gravity="right"
                                    android:text="%"
                                    android:textColor="@color/FC_black"
                                    android:textSize="@dimen/_14sdp" />
                            </TableRow>
                        </TableLayout>
                    </TableRow>
                </TableLayout>

                <LinearLayout
                    android:id="@+id/ll_back"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="right"
                    android:orientation="horizontal">

                    <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_30sdp"
                        android:gravity="end|right"
                        android:src="@drawable/keyboard_backspace_24_px_2" />

                    <TextView
                        style="@style/FC_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:gravity="left|start"
                        android:text="Cambiar condiciones"
                        android:textColor="@color/FC_blue_4"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>



                <Switch
                    style="@style/FC_Regular"
                    android:id="@+id/sw_code_promotor"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:switchPadding="@dimen/_5sdp"
                    android:gravity="left"
                    android:text="Si un promotor te asistió ingresa su código"
                    android:textColor="@color/FC_grey_1"
                    android:textSize="@dimen/_14sdp"
                    android:trackTint="@color/FC_blue_4"/>

                <include
                    android:id="@+id/et_code_promotor"
                    layout="@layout/fc_edit_text"/>

                <Button
                    android:id="@+id/btn_next"
                    style="@style/FC_Medium"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_gravity="center_horizontal"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:background="@drawable/background_selector_green"
                    android:text="PEDIR PRÉSTAMO"
                    android:textAllCaps="false"
                    android:textColor="@drawable/button_text_color"
                    android:textSize="@dimen/_14sdp"
                    android:enabled="true"/>

                <TextView
                    style="@style/FC_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="left|start"
                    android:text="Recibes tu dinero en efectivo en ventanilla de cualquier sucursal BBVA."
                    android:textColor="@color/FC_blue_4"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    style="@style/FC_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="left|start"
                    android:text="Puedes realizar los pagos de tus créditos en OXXO, BBVA, Chedraui o Telecom."
                    android:textColor="@color/FC_blue_4"
                    android:textSize="@dimen/_12sdp" />
                <TextView
                    style="@style/FC_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:gravity="left|start"
                    android:text="Si tienes alguna duda o deseas obtener más información comunícate al télefono: 55 5200 1610 con la opción #9 "
                    android:textColor="@color/FC_grey_1"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_50sdp"/>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

</LinearLayout>