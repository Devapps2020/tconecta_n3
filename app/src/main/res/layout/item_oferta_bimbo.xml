<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_90sdp"
        android:layout_weight="1"
        android:elevation="@dimen/_5sdp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/_4sdp"
        card_view:cardCornerRadius="@dimen/_4sdp"
        app:cardBackgroundColor="@color/colorBimboAlert">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

            <ImageView
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_55sdp"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ofertas_esclusivas"
                android:tint="@color/white" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_5sdp">

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Gana más"
                    android:textSize="@dimen/_14sdp"
                    android:gravity="left"
                    android:textColor="@color/colorWithe"
                    android:textStyle="bold"/>

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_30sdp"
                    android:text="Ofertas exclusivas\npara ti. ¡Descúbrelas aquí!"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="left"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/card_ofertas"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                android:paddingLeft="@dimen/_15sdp"
                android:src="@drawable/ic_chevron_right"
                android:tint="@color/white"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>
