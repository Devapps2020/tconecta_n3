<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:clickable="true">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fincomún"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_fincomun"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:gravity="center_horizontal"
                    android:orientation="vertical"
                    android:paddingBottom="@dimen/_15sdp">

                    <TextView
                        style="@style/Signika_Semibold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_marginBottom="@dimen/_10sdp"
                        android:padding="0dp"
                        android:text="Solicitar préstamo"
                        android:textColor="@color/colorBimboGrayDark"
                        android:textSize="@dimen/_22sdp" />

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:layout_marginBottom="@dimen/_30sdp">

                    <TextView
                        android:visibility="gone"
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_weight="1"
                        android:gravity="left"
                        android:text="Tipo y monto necesario"
                        android:textColor="@color/colorBimboBlueDark"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:visibility="gone"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elige tipo de crédito"
                        android:gravity="left"
                        android:textColor="@color/colorBimboGrayLight1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorPrimaryDark"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_credit_type"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right|center_vertical"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/text_error_credit_type"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:visibility="gone"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elige modo de crédito"
                        android:gravity="left"
                        android:textColor="@color/colorBimboGrayLight1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorPrimaryDark"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_credit_mod"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right|center_vertical"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/text_error_credit_mod"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:visibility="gone"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Elige el producto"
                        android:gravity="left"
                        android:textColor="@color/colorBimboGrayLight1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorPrimaryDark"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_product"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right|center_vertical"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/text_error_product"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿Qué monto te interesa?"
                            android:textColor="@color/colorBimboGrayLight1"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edt_how_much_money"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:padding="0dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_error_how_much_money"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="¿Cuál es tu ingreso mensual?"
                            android:textColor="@color/colorBimboGrayLight1"
                            android:textSize="@dimen/_12sdp" />

                        <EditText
                            android:id="@+id/edt_how_income"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:padding="0dp"
                            android:singleLine="true"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/text_error_how_income"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>

                    <TextView
                        android:visibility="gone"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Destino"
                        android:gravity="left"
                        android:textColor="@color/colorBimboGrayLight1"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginRight="@dimen/_30sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginTop="@dimen/_20sdp"/>

                    <RelativeLayout
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorPrimaryDark"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_destination"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right|center_vertical"
                            android:inputType="textMultiLine"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp"
                            android:spinnerMode="dialog"/>

                        <TextView
                            android:id="@+id/text_error_destination"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />



                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_45sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿Cada cuando te interesa pagar?"
                            android:gravity="left"
                            android:textColor="@color/colorBimboGrayLight1"
                            android:textSize="@dimen/_12sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorPrimaryDark"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_frecuencia"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right|center_vertical"
                            android:inputType="textMultiLine"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp"
                            android:spinnerMode="dialog"/>

                        <TextView
                            android:id="@+id/text_error_frecuencia"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>


                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_35sdp"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="¿Qué plazo te interesa?"
                            android:gravity="left"
                            android:textColor="@color/colorBimboGrayLight1"
                            android:textSize="@dimen/_12sdp"/>

                        <ImageView
                            android:layout_width="@dimen/_10sdp"
                            android:layout_height="@dimen/_10sdp"
                            android:src="@drawable/ic_down"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentBottom="true"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:tint="@color/colorPrimaryDark"/>

                        <com.reginald.editspinner.EditSpinner
                            android:id="@+id/edt_number_payments"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:digits="0123456789"
                            android:gravity="right|center_vertical"
                            android:inputType="phone"
                            android:maxLength="10"
                            android:paddingRight="@dimen/_25sdp"
                            android:singleLine="false"
                            android:textColor="@color/black"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:textSize="@dimen/_14sdp" />

                        <TextView
                            android:id="@+id/text_error_number_payments"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"
                            android:visibility="gone" />

                    </RelativeLayout>



                </LinearLayout>

                <LinearLayout
                    android:id="@+id/layout_images"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="Deseo adquirir\npor $350.00"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@drawable/mi_medico"
                            />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="No deseo estar\nprotegido"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_14sdp" />

                        <ImageView
                            android:visibility="gone"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:src="@drawable/mi_medico"/>

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_20sdp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:id="@+id/layout_con_medico"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorBimboBlueDark"
                            android:orientation="vertical"
                            android:padding="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp">

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Cuota :"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                            <TextView
                                android:id="@+id/label_cuota_con_medico"
                                style="@style/Graphik_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="$428.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp" />

                        </LinearLayout>

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="¡Me interesa!"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_solicita_con_medico"
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_selector_green"
                                android:text="Solicitar préstamo"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@color/colorBimboBlueDark"
                            android:orientation="vertical"
                            android:padding="@dimen/_20sdp"
                            android:layout_margin="@dimen/_10sdp">

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="Cuota :"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_16sdp"
                                android:layout_marginBottom="@dimen/_5sdp"/>

                            <TextView
                                android:id="@+id/label_cuota_sin_medico"
                                style="@style/Graphik_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"
                                android:gravity="center"
                                android:text="$428.00"
                                android:textColor="@color/white"
                                android:textSize="@dimen/_18sdp" />

                        </LinearLayout>

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:text="¡Me interesa!"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:layout_marginTop="@dimen/_5sdp"/>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="@dimen/_20sdp"
                            android:layout_marginBottom="@dimen/_20sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_10sdp"
                            android:gravity="center"
                            android:orientation="vertical">

                            <Button
                                android:id="@+id/btn_solicita_sin_medico"
                                style="@style/Graphik_Regular"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_selector_green"
                                android:text="Solicitar préstamo"
                                android:textAllCaps="false"
                                android:textColor="@drawable/button_text_color"
                                android:textSize="@dimen/_12sdp" />

                        </LinearLayout>

                    </LinearLayout>



                </LinearLayout>




            </LinearLayout>

        </ScrollView>

    </LinearLayout>

</LinearLayout>