<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_top">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Crear una cuenta"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"/>

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_help"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"/>

    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal"
        android:paddingBottom="@dimen/_30sdp">

        <TextView
            style="@style/Signika_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_mobile_numbre_1"
            android:textColor="@color/colorWithe"
            android:textSize="@dimen/_30sdp"
            android:padding="0dp"
            android:layout_marginBottom="@dimen/_40sdp"
            android:layout_marginTop="@dimen/_40sdp"/>

        <LinearLayout
            android:layout_width="@dimen/element_width"
            android:layout_height="@dimen/edit_height"
            android:background="@drawable/background_round_withe"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp">

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MX +52"
                android:padding="0dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"/>

            <EditText
                android:id="@+id/edit_numero_celular"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"
                android:hint="Número celular"
                android:background="@color/colorWithe"
                android:textSize="@dimen/_16sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:inputType="textEmailSubject"
                android:textCursorDrawable="@drawable/cursor_gray"
                android:singleLine="true"/>

        </LinearLayout>


        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Te enviaremos un número de confirmación"
            android:textColor="@color/colorWithe"
            android:textSize="@dimen/_12sdp"
            android:padding="0dp"
            android:layout_margin="@dimen/_10sdp"/>

        <Button
            android:id="@+id/btn_enviar"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="Enviar"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/background_button_round_green"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>