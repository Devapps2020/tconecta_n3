<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBimboWithe">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center">

        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_user"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Soporte"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp"
            android:layout_weight="1"/>

        <ImageView
            android:visibility="invisible"
            android:id="@+id/img_exit"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_power"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:orientation="vertical"
            android:gravity="center_horizontal">

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:padding="0dp"
                android:text="Teléfono"
                android:textColor="@color/colorBimboGrayDark"
                android:textSize="@dimen/_30sdp" />

            <TextView
                style="@style/Graphik_Regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Si tienes cualquier duda, o necesitas cualquier aclaración, puedes contactarnos por:"
                android:textColor="@color/colorBimboGrayDark"
                android:textSize="@dimen/_14sdp"
                android:padding="@dimen/_30sdp"/>

            <TextView
                android:id="@+id/text_soporte_telefono"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_5sdp"
                android:text="@string/text_contacto_cel"
                android:textColorLink="@color/colorBimboBlueLight"
                android:autoLink="web"
                style="@style/Graphik_Regular"
                android:textSize="@dimen/_16sdp"
                android:padding="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>