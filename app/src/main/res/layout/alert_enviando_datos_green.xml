<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <ImageView
        android:id="@+id/blurry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/transparent"/>

    <LinearLayout
        android:id="@+id/container_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient_green"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_100sdp"
                android:layout_height="@dimen/_100sdp"
                android:tint="@color/colorDryGreen"
                android:src="@drawable/ic_conectando"
                android:scaleType="fitXY"
                />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginBottom="@dimen/_5sdp">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:text="Enviando datos"
                    android:textColor="@color/colorBimboWithe"
                    android:textSize="@dimen/_20sdp" />

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:padding="0dp"
                    android:text="..."
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_20sdp" />

            </LinearLayout>


            <Button
                android:id="@+id/btn_cancelar"
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_alert_width"
                android:layout_height="@dimen/button_alert_height"
                android:background="@drawable/background_selector_green"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@drawable/button_text_color"
                android:textSize="@dimen/_14sdp"
                android:layout_margin="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>