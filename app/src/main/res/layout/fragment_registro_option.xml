<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_3"
    android:orientation="vertical">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <androidx.appcompat.widget.AppCompatImageView
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_100sdp"
                android:src="@drawable/icon_app_color" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_30sdp"
                android:fontFamily="@font/roboto_regular"
                android:gravity="center"
                android:text="@string/text_alert_access_7"
                android:textColor="@color/dusk_blue"
                android:textSize="@dimen/_20sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|top"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_bimbo"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_39"
                    android:gravity="center"
                    android:textSize="@dimen/_10sdp"
                    android:drawableStart="@drawable/baseline_email_24"
                    android:drawableTint="@color/white"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_40sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_facebook"
                    style="@style/Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_27"
                    android:gravity="center"
                    android:enabled="true"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:drawableStart="@drawable/facebook"
                    android:drawableTint="@color/clear_blue_two"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_40sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_gmail"
                    style="@style/Button.Secondary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_28"
                    android:gravity="center"
                    android:enabled="true"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:drawableStart="@drawable/google"
                    android:drawableTint="@color/clear_blue_two"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_40sdp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>