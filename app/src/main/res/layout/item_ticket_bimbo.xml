<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout_ticket"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left|center_vertical"
            android:orientation="vertical"
            android:background="@color/white"
            android:paddingTop="@dimen/_5sdp"
            android:paddingBottom="@dimen/_5sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="@dimen/_180sdp"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_nombre"
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="0dp"
                        android:layout_weight="1"
                        android:text="Choco roles"
                        android:textColor="@color/colorGrayBlack"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textSize="@dimen/_14sdp" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_piezas"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="left|center_vertical"
                        android:padding="0dp"
                        android:text="25 unidades"
                        android:textColor="@color/colorGrayBlack"
                        android:textSize="@dimen/_12sdp" />

                    <TextView
                        android:id="@+id/text_costo"
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:gravity="left"
                        android:text="$90,999,000.00"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textColor="@color/colorGrayDark"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginTop="@dimen/_5sdp"/>

                </LinearLayout>


                    <include layout="@layout/item_edit_increment_2"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:gravity="right|center">

                    <ImageView
                        android:id="@+id/btn_remove_pedi"
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="@dimen/_30sdp"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_16sdp"
                        android:padding="@dimen/_5sdp"
                        android:src="@drawable/ic_clear"
                        app:tint="@color/colorGrayDark"
                        android:layout_gravity="center|right"/>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>