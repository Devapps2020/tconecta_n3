<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_top"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="@color/colorWithe" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_money"
            android:tint="@color/colorWithe" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_notification"
            android:tint="@color/colorWithe" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_user_photo"
            android:tint="@color/colorWithe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image_green"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:gravity="center"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/ic_back"
                android:tint="@color/colorAccent" />

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="EnvÃ­o a domicilio"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_15sdp"
                android:src="@drawable/ic_help"
                android:tint="@color/colorAccent" />

        </LinearLayout>

        <TextView
            style="@style/Signika_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_10sdp"
            android:text="Nuevo pedido"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_30sdp" />


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="match_parent"
                android:layout_margin="@dimen/_10sdp"
                android:background="@drawable/background_round_withe"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Lista"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="left"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="@dimen/_2sdp" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Gansito"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="left"
                    android:padding="@dimen/_2sdp" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Pepsi light"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="left"
                    android:padding="@dimen/_2sdp" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Coca"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="left"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:layout_weight="1"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_1sdp"
                    android:background="@color/colorGray" />

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Total"
                    android:textColor="@color/colorPrimary"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="right"
                    android:padding="@dimen/_2sdp" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="$24.00 MXN"
                    android:padding="@dimen/_2sdp"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="@dimen/_16sdp"
                    android:gravity="right"/>


            </LinearLayout>


        </LinearLayout>

        <Button
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:background="@drawable/background_button_round_white"
            android:text="Confirmar pedido"
            android:layout_margin="@dimen/_10sdp"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp" />

        <TextView
            android:id="@+id/text_cancelar"
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="@string/text_cancel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp" />

        <include layout="@layout/item_menu_opciones_bottom"/>

    </LinearLayout>

</LinearLayout>