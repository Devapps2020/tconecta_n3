                        android:paddingLeft="@dimen/_15sdp">


                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:gravity="left"
                            android:padding="0dp"
                            android:text="Pagos de"
