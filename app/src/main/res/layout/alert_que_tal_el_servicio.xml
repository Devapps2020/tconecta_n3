<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/container_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/background_gradient_green"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_55sdp"
                android:padding="0dp"
                android:text="¿Que tal el servicio?"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_32sdp" />

            <ImageView
                android:layout_width="@dimen/_110sdp"
                android:layout_height="@dimen/_110sdp"
                android:layout_margin="@dimen/_10sdp"
                android:src="@drawable/ic_user_photo" />

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/_55sdp"
                android:text="Saúl"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_30sdp" />

            <TextView
                style="@style/Graphik_Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="No. De empleado"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_14sdp" />

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="8213908432"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_14sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/_20sdp"
                android:gravity="center">

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_star" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/colorWithe" />

                <ImageView
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:src="@drawable/ic_star"
                    android:tint="@color/colorWithe" />

            </LinearLayout>

            <TextView
                style="@style/Graphik_Regular"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:gravity="left"
                android:paddingBottom="@dimen/_5sdp"
                android:text="Deja un comentario"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_12sdp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_140sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:background="@drawable/background_round_withe"
                android:gravity="center">

                <EditText
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_10sdp"
                    android:background="@android:color/transparent"
                    android:text="Qué buen servicio, ¡qué bárbaro!"
                    android:gravity="top"
                    android:textSize="@dimen/_12sdp"/>

            </LinearLayout>

            <Button
                style="@style/Graphik_Medium"
                android:layout_width="@dimen/button_alert_width"
                android:layout_height="@dimen/button_alert_height"
                android:layout_margin="@dimen/_20sdp"
                android:background="@drawable/background_button_round_white"
                android:text="Listo"
                android:textAllCaps="false"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_16sdp" />


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>