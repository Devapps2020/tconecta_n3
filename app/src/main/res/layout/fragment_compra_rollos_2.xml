<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background_splash_header_1"
    android:orientation="vertical">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_marginTop="@dimen/_20sdp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_weight="1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/compra_rollos_title"
                    android:gravity="left"
                    android:fontFamily="@font/roboto_regular"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_18sdp"/>

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/illustrations_tiempo_servicios_100_x_100"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center"
                android:paddingBottom="@dimen/_30sdp">

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="¿En qué domicilio quieres recibirlo?"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_14sdp"
                    android:paddingBottom="@dimen/_20sdp" />

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Calle"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edit_calle_comercio"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_14sdp"
                        android:singleLine="true"
                        android:textStyle="bold" />

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_calle_comercio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"/>

                </RelativeLayout>

                <LinearLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:paddingBottom="@dimen/_2sdp">

                    <RelativeLayout
                        android:layout_width="@dimen/element_width"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_10sdp">

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="Interior #"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp"/>

                        <EditText
                            android:id="@+id/edit_numero_interior"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:gravity="right"
                            android:padding="1dp"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:singleLine="true"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/text_error_numero_interior"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"/>

                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="@dimen/element_width"
                        android:layout_height="@dimen/_35sdp"
                        android:orientation="vertical"
                        android:layout_marginTop="@dimen/_20sdp"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_10sdp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="Exterior #"
                            android:fontFamily="@font/roboto_regular"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_12sdp"/>

                        <EditText
                            android:id="@+id/edit_numero_exterior"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@drawable/background_edittext_green"
                            android:textCursorDrawable="@drawable/cursor_green"
                            android:gravity="right"
                            android:padding="1dp"
                            android:textColor="@color/dusk_blue"
                            android:textSize="@dimen/_14sdp"
                            android:textStyle="bold"
                            android:singleLine="true"/>

                        <TextView
                            android:visibility="gone"
                            android:id="@+id/text_error_numero_exterior"
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:layout_alignParentBottom="true"
                            android:background="@color/colorRed"/>

                    </RelativeLayout>

                </LinearLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Código postal"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edit_codigo_postal"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_codigo_postal"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"/>

                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Estado"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_12sdp" />

                    <com.reginald.editspinner.EditSpinner
                        android:id="@+id/edit_estado"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_14sdp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:paddingRight="@dimen/_20sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_down"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:tint="@color/dusk_blue"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_error_estado"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"/>

                    <LinearLayout
                        android:id="@+id/layout_estado"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Municipio"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_12sdp" />

                    <EditText
                        android:id="@+id/edit_municipio"
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:padding="0dp"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_14sdp"
                        android:textStyle="bold"
                        android:singleLine="true"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_error_municipio"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"/>

                </RelativeLayout>


                <RelativeLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_35sdp"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_20sdp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Población"
                        android:fontFamily="@font/roboto_regular"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_12sdp" />

                    <com.reginald.editspinner.EditSpinner
                        android:id="@+id/edit_colonia"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@drawable/background_edittext_green"
                        android:textCursorDrawable="@drawable/cursor_green"
                        android:gravity="right"
                        android:textColor="@color/dusk_blue"
                        android:textSize="@dimen/_14sdp"
                        android:singleLine="true"
                        android:textStyle="bold"
                        android:text=""
                        android:paddingRight="@dimen/_20sdp"/>

                    <ImageView
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="@dimen/_10sdp"
                        android:src="@drawable/ic_down"
                        android:layout_alignParentRight="true"
                        android:layout_margin="@dimen/_5sdp"
                        android:tint="@color/dusk_blue"/>

                    <TextView
                        android:visibility="gone"
                        android:id="@+id/text_error_colonia"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_1sdp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/colorRed"/>

                </RelativeLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|bottom"
                android:layout_marginTop="@dimen/_30sdp"
                android:layout_marginBottom="@dimen/_10sdp">


                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_continuar"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:enabled="false"
                    android:gravity="center"
                    android:text="@string/text_confirm"
                    android:textSize="@dimen/_10sdp" />

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>