<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent">

    <io.alterac.blurkit.BlurLayout
        android:id="@+id/blurry"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <LinearLayout
        android:id="@+id/container_alert"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/shadow"
        android:orientation="vertical"
        android:visibility="visible">

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/background_gradient_green"
            android:gravity="center_horizontal"
            android:orientation="vertical"
            android:padding="@dimen/_15sdp">

            <ImageView
                android:layout_width="@dimen/_125sdp"
                android:layout_height="@dimen/_98sdp"
                android:tint="@color/colorDryGreen"
                android:src="@drawable/ic_conectando"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                />

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Pagos con tarjeta"
                android:padding="0dp"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_20sdp"
                android:layout_margin="@dimen/_5sdp"/>

            <Button
                style="@style/Signika_Semibold"
                android:layout_width="@dimen/button_alert_width"
                android:layout_height="@dimen/button_alert_height"
                android:background="@drawable/background_button_round_white"
                android:text="Cancelar"
                android:textAllCaps="false"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_14sdp"
                android:layout_margin="@dimen/_10sdp"/>

        </LinearLayout>

    </LinearLayout>

</RelativeLayout>