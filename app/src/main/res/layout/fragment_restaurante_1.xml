<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_splash_header_3"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">
            <!--
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/header_height"
                android:layout_marginTop="@dimen/header_top">

                <ImageView
                    android:id="@+id/img_user"
                    style="@style/HeaderLeftImageStyle1"/>

                <TextView
                    android:text="Dividir cuenta"
                    style="@style/HeaderTextStyle1" />

                <ImageView
                    android:id="@+id/img_help"
                    style="@style/HeaderRightImageStyle1" />

            </RelativeLayout>
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left"
                    android:text="@string/restaurante_13"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_20sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/pagos"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>
            <!--
            <TextView
                android:id="@+id/nombre_servicio"
                style="@style/Signika_Semibold"
                android:visibility="gone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:padding="@dimen/_5sdp"
                android:text="@string/restaurante_2"
                android:textColor="@color/colorGrayBlack"
                android:textSize="@dimen/_20sdp" />
            -->

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:gravity="top"
                android:orientation="vertical"
                android:layout_weight="1"
                >

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/layout_nombre"
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_70sdp"

                    android:background="@drawable/background_round_withe"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        style="@style/Graphik_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="Nombre"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_inombre_cliente"
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@color/colorWithe"
                            android:gravity="left|center_vertical"
                            android:inputType="textEmailSubject"
                            android:padding="0dp"
                            android:hint="Nombre"
                            android:singleLine="true"
                            android:textColor="@color/colorGrayBlack"
                            android:textCursorDrawable="@drawable/cursor_gray"
                            android:textSize="@dimen/_18sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/background_round_withe"
                    android:gravity="center_vertical"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">

                    <TextView
                        style="@style/Graphik_Medium"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="0dp"
                        android:text="@string/restaurante_3"
                        android:textColor="@color/colorGray"
                        android:textSize="@dimen/_12sdp" />

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="horizontal">

                        <EditText
                            android:id="@+id/edit_importe"
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:background="@color/colorWithe"
                            android:gravity="left|center_vertical"
                            android:hint="$0.00"
                            android:inputType="textEmailSubject"
                            android:padding="0dp"
                            android:singleLine="true"
                            android:textColor="@color/colorGrayBlack"
                            android:textCursorDrawable="@drawable/cursor_gray"
                            android:textSize="@dimen/_20sdp" />

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:padding="0dp"
                            android:text="MXN"
                            android:textColor="@color/colorGrayBlack"
                            android:textSize="@dimen/_20sdp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="@dimen/element_width"
                    android:layout_height="@dimen/_100sdp"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/background_round_withe"
                    android:gravity="center_vertical"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                    <LinearLayout
                        android:layout_width="@dimen/element_width_195"
                        android:layout_height="@dimen/_70sdp"
                        android:layout_marginTop="10dp"
                        android:background="@drawable/background_round_withe"
                        android:gravity="center_vertical"
                        android:orientation="vertical"
                        android:padding="0dp">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:padding="0dp"
                            android:text="@string/restaurante_4"
                            android:textColor="@color/colorGray"
                            android:textSize="@dimen/_12sdp" />

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="horizontal">

                            <EditText
                                android:id="@+id/edit_no_comensales"
                                android:enabled="false"
                                style="@style/Graphik_Medium"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_weight="1"
                                android:background="@color/colorWithe"
                                android:gravity="left|center_vertical"
                                android:hint="1"
                                android:inputType="textEmailSubject"
                                android:padding="0dp"
                                android:singleLine="true"
                                android:textColor="@color/colorGrayBlack"
                                android:textCursorDrawable="@drawable/cursor_gray"
                                android:textSize="@dimen/_20sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="@dimen/element_width_50"
                        android:layout_height="@dimen/_70sdp"
                        android:gravity="center"
                        android:orientation="vertical">
                        <!--
                        <TextView
                            style="@style/Graphik_Medium"
                            android:gravity="center"
                            android:layout_marginTop="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="40.00dp"
                            android:text="+"
                            android:textSize="@dimen/_30sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:padding="0dp" />

                        <TextView
                            style="@style/Graphik_Medium"
                            android:gravity="center"
                            android:layout_marginBottom="0dp"
                            android:layout_width="match_parent"
                            android:layout_height="40.00dp"
                            android:text="-"
                            android:textSize="@dimen/_30sdp"
                            android:textColor="@color/colorPrimaryDark"
                            android:padding="0dp" />
                            -->
                        <ImageView
                            android:id="@+id/btnMore"
                            android:layout_width="45.00dp"
                            android:layout_height="45.00dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/plus_sign" />

                        <ImageView
                            android:id="@+id/btnMinus"
                            android:layout_width="45.00dp"
                            android:layout_height="45.00dp"
                            android:layout_marginTop="10dp"
                            android:layout_weight="1"
                            android:gravity="center"
                            android:padding="0dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/minus_sign" />
                    </LinearLayout>

            </LinearLayout>

            </LinearLayout>
            <!--
            <Button
                android:id="@+id/btn_continuar"
                android:text="@string/restaurante_btn_1"
                style="@style/ButtonGrayStyle"
                android:enabled="false"
                android:layout_marginBottom="0dp" />

            <Button
                android:id="@+id/btn_cancelar"
                android:text="@string/restaurante_btn_2"
                style="@style/ButtonGrayStyle" />
            -->
            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_continuar"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_button_37"
                android:gravity="center"
                android:enabled="false"
                android:textSize="@dimen/_10sdp" />

            <androidx.legacy.widget.Space
                android:layout_width="match_parent"
                android:layout_height="@dimen/_20sdp"/>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_cancelar"
                style="@style/Button.Primary"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/restaurante_btn_2"
                android:gravity="center"
                android:enabled="true"
                android:textSize="@dimen/_10sdp" />

        </LinearLayout>

    </ScrollView>

</LinearLayout>