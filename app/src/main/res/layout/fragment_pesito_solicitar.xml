<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_top"
        android:layout_marginBottom="@dimen/_10sdp"
        android:gravity="center">

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_home"
            android:tint="@color/colorWithe" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_money"
            android:tint="@color/colorWithe" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_notification"
            android:tint="@color/colorWithe" />

        <ImageView
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_weight="1"
            android:src="@drawable/ic_user_photo"
            android:tint="@color/colorWithe" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/background_image_green"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_margin="@dimen/_10sdp">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:paddingRight="@dimen/_10sdp"
                android:src="@drawable/ic_back"
                android:tint="@color/colorAccent" />

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Pesito"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_16sdp" />

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:layout_weight="1"
                android:paddingLeft="@dimen/_15sdp"
                android:src="@drawable/ic_help"
                android:tint="@color/colorAccent" />

        </LinearLayout>

        <TextView
            style="@style/Signika_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Solicitar Pesito"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_30sdp"/>

        <TextView
            style="@style/Graphik_Regular"
            android:layout_width="@dimen/element_width"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:text="¿Por cual monto quieres tu préstamo?"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_16sdp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="377dp"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="@dimen/element_width"
                android:layout_height="@dimen/_70sdp"
                android:background="@drawable/background_round_withe"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp"
                android:layout_margin="@dimen/_20sdp">

                <TextView
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="Monto: (Máx. $2,500)"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp" />

                <EditText
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWithe"
                    android:gravity="left|center_vertical"
                    android:inputType="textEmailSubject"
                    android:singleLine="true"
                    android:padding="0dp"
                    android:textColor="@color/colorGrayDark"
                    android:text="$35000.00 MXN"
                    android:textCursorDrawable="@drawable/cursor_gray"
                    android:textSize="@dimen/_25sdp" />

            </LinearLayout>

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="@dimen/element_width"
                android:layout_height="wrap_content"
                android:text="$1 al día por 40 días"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="@dimen/_16sdp" />



        </LinearLayout>

        <Button
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:layout_marginTop="@dimen/_10sdp"
            android:background="@drawable/background_button_round_white"
            android:text="Confirmar monto"
            android:textAllCaps="false"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_14sdp"
            android:layout_marginBottom="@dimen/_10sdp"/>

        <TextView
            android:id="@+id/text_cancelar"
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="@dimen/_5sdp"
            android:text="@string/text_cancel"
            android:textColor="@color/colorPrimaryDark"
            android:textSize="@dimen/_12sdp" />

        <include layout="@layout/item_menu_opciones_bottom" />

    </LinearLayout>

</LinearLayout>