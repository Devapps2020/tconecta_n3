<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_gravity="center"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="@dimen/_5sdp"
        card_view:cardUseCompatPadding="true"
        android:foregroundGravity="center"
        card_view:cardElevation="@dimen/_4sdp"
        card_view:cardCornerRadius="@dimen/_4sdp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp"
            android:paddingBottom="@dimen/_15sdp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="@dimen/_5sdp"
                android:gravity="center_vertical"
                android:layout_marginBottom="@dimen/_5sdp">

                <ImageView
                    android:id="@+id/img_award"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_60sdp"
                    android:src="@drawable/ic_add_photo"
                    android:layout_marginRight="@dimen/_10sdp"/>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/text_name_award"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/_3sdp"
                        android:text="NOMBRRE"
                        android:textColor="@color/colorBimboGrayDark"
                        android:textSize="@dimen/_12sdp"
                        android:padding="@dimen/_5sdp"
                        android:gravity="left"/>

                    <TextView
                        android:id="@+id/text_cost_award"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:lineSpacingExtra="@dimen/_3sdp"
                        android:text="COSTO"
                        android:padding="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:textColor="@color/colorBimboBlueDark"
                        android:textSize="@dimen/_12sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:gravity="left"/>

                </LinearLayout>

            </LinearLayout>

            <Button
                android:id="@+id/btn_exchange"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_30sdp"
                android:layout_marginLeft="@dimen/_30sdp"
                android:layout_marginRight="@dimen/_30sdp"
                android:background="@drawable/background_selector_green"
                android:text="Canjear"
                android:textAllCaps="false"
                android:textColor="@color/colorWithe"
                android:textSize="@dimen/_12sdp"
                android:textStyle="bold" />

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>