<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_style_top_icon"
    android:orientation="vertical"
    android:paddingTop="@dimen/_10sdp"
    android:gravity="center_horizontal"
    android:clickable="true">

    <androidx.appcompat.widget.AppCompatImageView
        android:layout_width="wrap_content"
        android:layout_height="@dimen/_100sdp"
        android:src="@drawable/tconecta_logo_4"
        android:tint="@color/white"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_access_9"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dusk_blue"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:lineSpacingExtra="@dimen/_3sdp" />

            <TextView
                android:id="@+id/label_name"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Luis FM"
                android:gravity="center"
                android:fontFamily="@font/roboto_medium"
                android:textColor="@color/dusk_blue"
                android:textSize="@dimen/_20sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginBottom="@dimen/_40sdp"/>

            <include
                android:id="@+id/edit_pass"
                layout="@layout/view_edit_text"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginBottom="@dimen/_20sdp"
                android:gravity="right">

                <TextView
                    android:id="@+id/btn_recuperar_pass"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_marginTop="@dimen/_3sdp"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="right"
                    android:text="@string/text_access_5"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_10sdp" />

                <Switch
                    android:visibility="gone"
                    android:id="@+id/switch_remember_user"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/roboto_regular"
                    android:text="@string/text_access_3"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_10sdp"
                    android:switchPadding="@dimen/_5sdp"/>

            </LinearLayout>

            <TextView
                android:id="@+id/label_not_me"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/text_button_29"
                android:gravity="center"
                android:fontFamily="@font/roboto_regular"
                android:textColor="@color/dusk_blue"
                android:textSize="@dimen/_14sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:lineSpacingExtra="@dimen/_3sdp"
                android:layout_marginBottom="@dimen/_30sdp"/>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center|bottom"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginBottom="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/btn_continuar"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_1"
                    android:gravity="center"
                    android:enabled="false"
                    android:textSize="@dimen/_10sdp" />

                <androidx.appcompat.widget.AppCompatButton
                    android:visibility="gone"
                    android:id="@+id/btn_facebook"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_41"
                    android:gravity="center"
                    android:enabled="true"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:drawableStart="@drawable/facebook"
                    android:drawableTint="@color/white"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_40sdp"/>

                <androidx.appcompat.widget.AppCompatButton
                    android:visibility="gone"
                    android:id="@+id/btn_gmail"
                    style="@style/Button.Primary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/text_button_42"
                    android:gravity="center"
                    android:enabled="true"
                    android:textSize="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:drawableStart="@drawable/google"
                    android:drawableTint="@color/white"
                    android:paddingLeft="@dimen/_20sdp"
                    android:paddingRight="@dimen/_40sdp"/>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

</LinearLayout>