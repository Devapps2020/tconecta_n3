<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content">

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Pago"
                android:textColor="@color/white"
                android:textSize="@dimen/_32sdp" />

            <TextView
                style="@style/Signika_Semibold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:text="Exitoso"
                android:textColor="@color/white"
                android:textSize="@dimen/_60sdp"
                android:paddingTop="@dimen/_30sdp"/>

        </RelativeLayout>

        <ImageView
            android:layout_width="@dimen/_99sdp"
            android:layout_height="@dimen/_99sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/c_exitoso" />

        <TextView
            android:id="@+id/text_mensaje"
            style="@style/Graphik_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/text_sp530_approved_txr"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_5sdp"/>

        <Button
            android:id="@+id/btn_aceptar"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/_150sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:text="Aceptar"
            android:textAllCaps="false"
            android:background="@drawable/background_selector_white"
            android:textColor="@drawable/button_text_color"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>

</LinearLayout>