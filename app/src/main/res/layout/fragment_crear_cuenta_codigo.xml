<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:layout_marginTop="@dimen/header_top">

        <ImageView
            android:id="@+id/img_user"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_user"
            android:layout_centerVertical="true"
            android:layout_alignParentLeft="true"
            android:layout_marginLeft="@dimen/_20sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="@string/text_code_1"
            android:textColor="@color/colorAccent"
            android:textSize="@dimen/_16sdp"/>

        <ImageView
            android:id="@+id/img_help"
            android:layout_width="@dimen/_25sdp"
            android:layout_height="@dimen/_25sdp"
            android:tint="@color/colorAccent"
            android:src="@drawable/ic_help"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/_20sdp"/>

    </RelativeLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">


        <TextView
            style="@style/Signika_Semibold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Código"
            android:textColor="@color/colorWithe"
            android:textSize="@dimen/_30sdp"
            android:layout_margin="@dimen/_18sdp"
            android:padding="0dp"/>

        <View
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/_1sdp"
            android:background="@drawable/background_edittext_selected_green"
            android:layout_marginTop="@dimen/_20sdp"/>

        <LinearLayout
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/edit_height"
            android:orientation="vertical"
            android:gravity="center_vertical"
            android:layout_marginTop="@dimen/_5sdp">


            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="MX +52"
                android:padding="0dp"
                android:textColor="@color/colorGray"
                android:textSize="@dimen/_12sdp"/>


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_16sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:singleLine="true"
                    android:text="55 256 97416"
                    android:textColor="@color/colorGray"
                    android:layout_weight="1"
                    android:padding="0dp"
                    android:gravity="left"/>

                <TextView
                    style="@style/Graphik_Medium"
                    android:id="@+id/edit_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:singleLine="true"
                    android:padding="0dp"
                    android:text="Usar otro cel"
                    android:textColor="@color/colorGray"
                    android:gravity="right"/>

            </LinearLayout>



        </LinearLayout>


        <View
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/_1sdp"
            android:background="@drawable/background_edittext_selected_green"
            android:layout_marginTop="@dimen/_5sdp"/>

        <LinearLayout
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_marginTop="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_round_withe"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_weight="1">

                <EditText
                    android:id="@+id/edit_numero_celular"
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWithe"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="textEmailSubject"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_gray"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_round_withe"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_weight="1">

                <EditText
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWithe"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="textEmailSubject"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_gray"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_round_withe"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_weight="1">

                <EditText
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWithe"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="textEmailSubject"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_gray"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/edit_height"
                android:layout_margin="@dimen/_5sdp"
                android:background="@drawable/background_round_withe"
                android:gravity="center_vertical"
                android:orientation="vertical"
                android:paddingLeft="@dimen/_10sdp"
                android:paddingRight="@dimen/_10sdp"
                android:layout_weight="1">

                <EditText
                    style="@style/Graphik_Medium"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/colorWithe"
                    android:gravity="center"
                    android:hint="1"
                    android:inputType="textEmailSubject"
                    android:singleLine="true"
                    android:textCursorDrawable="@drawable/cursor_gray"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>



        </LinearLayout>

        <Button
            android:id="@+id/btn_reenviar"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="Reenviar código"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_20sdp"
            android:background="@drawable/background_button_round_green"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorAccent" />

        <Button
            android:id="@+id/btn_confirmar"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/button_width"
            android:layout_height="@dimen/button_height"
            android:text="@string/text_confirm"
            android:textAllCaps="false"
            android:layout_marginTop="@dimen/_20sdp"
            android:layout_marginBottom="@dimen/_20sdp"
            android:background="@drawable/background_button_round_green"
            android:textSize="@dimen/_12sdp"
            android:textColor="@color/colorAccent" />

    </LinearLayout>

</LinearLayout>