<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:card_view="http://schemas.android.com/tools"
    android:background="@drawable/background_splash_header_3"
    android:orientation="vertical"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:gravity="center_horizontal"
            android:padding="@dimen/_20sdp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="@dimen/_100sdp"
                android:orientation="horizontal"
                android:gravity="center">

                <TextView
                    android:id="@+id/txt_fiar_nombre"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="left"
                    android:text="@string/text_fiado_10"
                    android:textColor="@color/dusk_blue"
                    android:textSize="@dimen/_20sdp" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:src="@drawable/illustrations_fiado"
                    android:paddingLeft="@dimen/_20sdp"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/layout_detalle_tab"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_horizontal"
                    android:background="@color/colorGrayLight">

                    <LinearLayout
                        android:id="@+id/ln_trust"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:gravity="center">

                        <TextView
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:text="Fiar"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/background" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_detail"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/background"
                        android:gravity="center">

                        <TextView
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:text="Detalle"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/background" />

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_profile"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_50sdp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:background="@color/background"
                        android:gravity="center">

                        <TextView
                            android:fontFamily="@font/roboto_medium"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:padding="@dimen/_5sdp"
                            android:text="Perfil"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_14sdp" />

                        <View
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_1sdp"
                            android:background="@color/background" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/ln_tab1"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center"
                        android:visibility="visible"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_30sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/background_round_withe"
                                android:gravity="center_vertical"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"                                android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="Monto a fiar"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/_12sdp" />

                                <include
                                    android:id="@+id/edit_mount_trust"
                                    layout="@layout/view_edit_text_sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:layout_marginTop="@dimen/_10sdp"
                                android:background="@drawable/background_round_withe"
                                android:orientation="vertical">

                                <TextView
                                    android:fontFamily="@font/roboto_medium"
                                    android:gravity="center"                                android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:padding="0dp"
                                    android:text="Detalle"
                                    android:textColor="@color/colorGray"
                                    android:textSize="@dimen/_12sdp" />


                                <include
                                    android:id="@+id/edit_detail"
                                    layout="@layout/view_edit_text_sp"/>

                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:gravity="center"
                            android:layout_marginBottom="@dimen/_10sdp"
                            android:layout_marginTop="@dimen/_20sdp">

                            <androidx.appcompat.widget.AppCompatButton
                                android:id="@+id/btn_confirm"
                                style="@style/Button.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_button_56"
                                android:gravity="center"
                                android:enabled="false"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_marginTop="@dimen/_15sdp"
                                android:id="@+id/text_cancell"
                                style="@style/Button.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="@string/text_button_55"
                                android:gravity="center"
                                android:enabled="false"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_tab2"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center|top"
                        android:visibility="gone"
                        android:layout_weight="1"
                        android:layout_marginTop="@dimen/_30sdp">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/background_round_withe"
                            android:gravity="center_vertical"
                            android:orientation="vertical">

                            <TextView
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="center"                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:padding="0dp"
                                android:text="Deuda total"
                                android:textColor="@color/colorGray"
                                android:textSize="@dimen/_12sdp" />

                            <include
                                android:id="@+id/edit_total_debt"
                                layout="@layout/view_edit_text_sp"/>

                        </LinearLayout>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/_20sdp"
                            android:id="@+id/btn_partial_payment"
                            style="@style/Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Pago parcial o total"
                            android:gravity="center"
                            android:enabled="false"
                            android:textSize="@dimen/_10sdp" />

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/_15sdp"
                            android:id="@+id/btn_send_remender"
                            style="@style/Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Enviar recordatorio"
                            android:gravity="center"
                            android:enabled="false"
                            android:textSize="@dimen/_10sdp" />

                        <ListView
                            android:id="@+id/list_adeudos"
                            android:layout_marginTop="@dimen/_30sdp"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:background="@color/colorWithe"/>

                    </LinearLayout>

                    <LinearLayout
                        android:id="@+id/ln_tab3"
                        android:visibility="gone"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_gravity="center"
                        android:layout_weight="1"
                        android:orientation="vertical">

                        <include
                            android:id="@+id/edit_email"
                            layout="@layout/view_edit_text_sp"/>

                        <androidx.legacy.widget.Space
                            android:layout_width="match_parent"
                            android:layout_height="@dimen/_20sdp"/>

                        <include
                            android:id="@+id/edit_phone"
                            layout="@layout/view_edit_text_sp"/>

                        <LinearLayout
                            android:layout_weight="1"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"/>

                        <androidx.appcompat.widget.AppCompatButton
                            android:layout_marginTop="@dimen/_15sdp"
                            android:id="@+id/btn_save_changes"
                            style="@style/Button.Primary"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Guardar cambios"
                            android:gravity="center"
                            android:enabled="false"
                            android:textSize="@dimen/_10sdp" />


                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:visibility="gone"
                android:id="@+id/layout_detalle_perfil"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center|top"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">

                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:gravity="center_horizontal"
                            android:orientation="vertical">

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radLimitarMonto"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:text=""
                                        android:theme="@style/RadioButtonGray"
                                        android:textSize="@dimen/_12sdp"
                                        android:layout_marginRight="@dimen/_3sdp"
                                        android:textColor="@color/colorGrayBlack1"
                                        android:textStyle="bold"/>

                                    <TextView
                                        style="@style/Graphik_Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="0dp"
                                        android:text="Limitar monto de préstamos"
                                        android:textColor="@color/colorGray"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>

                                <include
                                    android:id="@+id/edit_monto_perfil"
                                    layout="@layout/view_edit_text_sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radLimitarTiempo"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_3sdp"
                                        android:text=""
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold"
                                        android:theme="@style/RadioButtonGray" />

                                    <TextView
                                        style="@style/Graphik_Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="0dp"
                                        android:text="Limitar tiempo de préstamos"
                                        android:textColor="@color/colorGray"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>

                                <include
                                    android:id="@+id/edit_dias_perfil"
                                    layout="@layout/view_edit_text_sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:orientation="vertical"
                                android:padding="@dimen/_10sdp">

                                <LinearLayout
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">

                                    <RadioButton
                                        android:id="@+id/radCobrarInteres"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:layout_marginRight="@dimen/_3sdp"
                                        android:text=""
                                        android:textColor="@color/colorGrayBlack1"
                                        android:textSize="@dimen/_12sdp"
                                        android:textStyle="bold"
                                        android:theme="@style/RadioButtonGray" />

                                    <TextView
                                        style="@style/Graphik_Medium"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        android:padding="0dp"
                                        android:gravity="left"
                                        android:text="Interéses a cobrar"
                                        android:textColor="@color/colorGray"
                                        android:textSize="@dimen/_12sdp" />

                                </LinearLayout>

                                <include
                                    android:id="@+id/edit_interes_perfil"
                                    layout="@layout/view_edit_text_sp"/>

                            </LinearLayout>

                            <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_weight="1"/>

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_marginTop="@dimen/_10sdp"
                                android:id="@+id/btn_regla"
                                style="@style/Button.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Guardar cambios"
                                android:gravity="center"
                                android:enabled="false"
                                android:textSize="@dimen/_10sdp" />

                            <androidx.appcompat.widget.AppCompatButton
                                android:layout_marginTop="@dimen/_15sdp"
                                android:id="@+id/text_cancel"
                                style="@style/Button.Primary"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Cancelar"
                                android:gravity="center"
                                android:enabled="true"
                                android:textSize="@dimen/_10sdp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:gravity="center">

            <ImageView
                android:id="@+id/tab_reglas_perfil"
                android:layout_width="@dimen/_40sdp"
                android:layout_height="@dimen/_30sdp"
                android:rotation="90"
                android:padding="@dimen/_5sdp"
                android:src="@drawable/ic_vertical_dots" />

            <TextView
                android:id="@+id/text_label_2"
                android:fontFamily="@font/roboto_medium"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Reglas de fiado\npara Celia"
                android:textColor="@color/colorGrayBlack"
                android:layout_marginBottom="@dimen/_10sdp"
                android:textSize="@dimen/_12sdp"/>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>