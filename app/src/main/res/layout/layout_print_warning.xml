<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/item_coupon_shape">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right"
        android:padding="24dp"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/ivCouponClose"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:src="@drawable/close_24_px"
            app:tint="@color/colorGrayDark" />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:gravity="center"
            android:layout_marginBottom="16dp"
            android:orientation="vertical">

            <ImageView
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:src="@drawable/tconecta_logo_4" />

        </LinearLayout>

        <TextView
            android:id="@+id/tvTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:text="@string/coupons_change_device"
            android:gravity="center"
            android:textColor="@color/colorGrayDark"
            android:textSize="16dp"
            android:textStyle="bold"/>

        <TextView
            android:id="@+id/tvDescription"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp"
            android:layout_marginBottom="16dp"
            android:gravity="center"
            android:text="@string/coupons_only_terminal"
            android:textColor="@color/colorGrayDark"
            android:textSize="16dp"/>

        <Button
            android:id="@+id/btnCouponAccept"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/order_button_shape"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:layout_marginBottom="14dp"
            android:text="Aceptar"
            android:textColor="@color/white"
            android:textSize="14dp"/>

    </LinearLayout>

</RelativeLayout>