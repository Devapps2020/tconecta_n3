<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/background_splash_header_3"
    android:clickable="true">

    <include layout="@layout/view_menu_top"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height"
        android:orientation="horizontal"
        android:gravity="center"
        android:visibility="gone">

        <ImageView
            android:visibility="invisible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_user"
            android:tint="@color/colorAccent"
            android:layout_margin="@dimen/_10sdp"/>

        <TextView
            style="@style/Graphik_Medium"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:text="Fincomún"
            android:textColor="@color/colorBimboGrayDark"
            android:textSize="@dimen/_16sdp" />

        <ImageView
            android:id="@+id/img_fincomun"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:src="@drawable/ic_fincomun"
            android:layout_margin="@dimen/_10sdp"/>

    </LinearLayout>

    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/layout_title_prestamos"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:gravity="center_horizontal"
                android:paddingBottom="@dimen/_5sdp">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:padding="0dp"
                    android:text="Detalle"
                    android:textColor="@color/colorBimboGrayDark"
                    android:textSize="@dimen/_22sdp" />

            </LinearLayout>

            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:fillViewport="true"
                android:layout_marginBottom="@dimen/_20sdp">

                <LinearLayout
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_margin="@dimen/_20sdp"
                    android:gravity="center_horizontal">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Folio: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_folio"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Clave de rastreo: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_rastreo"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_referencia"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Referencia numérica: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_referencia"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Estatus: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_estatus"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/text_label_status_descripcion"
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Descripción de estatus: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_status_descripcion"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre del beneficiario: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_beneficiario"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Nombre del ordenante: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_ordenante"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">


                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Monto: "
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_monto"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:visibility="gone"
                        android:id="@+id/layout_fecha_request"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fecha de solicitud"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_fecha_request"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:orientation="vertical">

                        <TextView
                            style="@style/Graphik_Medium"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Fecha de operación"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_14sdp"
                            android:gravity="left"/>

                        <TextView
                            android:id="@+id/text_fecha"
                            style="@style/Graphik_Regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1234567890"
                            android:gravity="left"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:textColor="@color/colorBimboGrayDark"
                            android:textSize="@dimen/_12sdp" />

                    </LinearLayout>

                    <Button
                        android:id="@+id/bnt_status"
                        style="@style/Signika_Semibold"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/button_height"
                        android:text="Consultar mensaje de cobro"
                        android:textAllCaps="false"
                        android:layout_marginTop="@dimen/_30sdp"
                        android:layout_marginBottom="@dimen/_30sdp"
                        android:background="@drawable/background_selector_green"
                        android:textColor="@drawable/button_text_color"
                        android:textSize="@dimen/_12sdp" />

                </LinearLayout>

            </ScrollView>

        </LinearLayout>

    </LinearLayout>

</LinearLayout>