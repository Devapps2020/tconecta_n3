<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_two"
    android:orientation="vertical"
    android:clickable="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/header_height">

        <ImageView
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_25sdp"
            android:layout_margin="@dimen/_10sdp"
            android:src="@drawable/ic_fincomun"
            android:layout_alignParentLeft="true"/>

        <TextView
            android:id="@+id/tv_decline"
            style="@style/Graphik_Medium"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="NO, GRACIAS"
            android:textColor="@color/colorBimboBlueDark"
            android:textSize="@dimen/_10sdp"
            android:layout_alignParentRight="true"
            android:layout_margin="@dimen/_10sdp"
            android:clickable="true"/>



    </RelativeLayout>


    <LinearLayout
        android:id="@+id/container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:background="@color/white">


        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:fillViewport="true">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/background_rounded_blue_fincomun"
                    android:layout_marginHorizontal="@dimen/_15sdp">

                    <ImageView
                        android:id="@+id/iv_fincomun"
                        android:layout_width="@dimen/_50sdp"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:src="@drawable/ic_fincomun"
                        android:layout_alignParentLeft="true"/>


                    <TextView
                        android:id="@+id/tv_description_1"
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/txt_title_offer_0"
                        android:textColor="@color/carolina_blue"
                        android:layout_marginTop="@dimen/_7sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_10sdp"
                        android:layout_toRightOf="@+id/iv_fincomun"/>

                    <TextView
                        style="@style/Graphik_Regular"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="@string/txt_title_offer_1"
                        android:textColor="@color/carolina_blue"
                        android:textSize="@dimen/_10sdp"
                        android:layout_below="@+id/tv_description_1"
                        android:paddingHorizontal="@dimen/_10sdp"/>


                </RelativeLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/background_rounded_filled_blue_fincomun"
                    android:layout_marginHorizontal="@dimen/_15sdp"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/tv_felicidades"
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="¡Felicidades!"
                        android:textColor="@color/white_two"
                        android:textSize="@dimen/_23sdp"
                        android:layout_marginTop="@dimen/_15sdp"/>

                    <TextView
                        android:id="@+id/tv_offer"
                        style="@style/Graphik_Medium"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Tienes un préstamo preaprobado de "
                        android:textColor="@color/white_two"
                        android:textSize="@dimen/_18sdp"
                        android:layout_marginTop="@dimen/_15sdp"
                        android:layout_marginHorizontal="@dimen/_30sdp"/>

                    <TableLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginVertical="@dimen/_25sdp"
                        android:layout_marginHorizontal="@dimen/_25sdp">

                        <TableRow
                            android:id="@+id/tr_cash"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/check_24_px"
                                app:tint="@color/white_two"
                                android:layout_gravity="center"/>

                            <TextView
                                style="@style/Graphik_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="left"
                                android:text="Dinero en efectivo"
                                android:textColor="@color/white_two"
                                android:textSize="@dimen/_17sdp" />


                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/check_24_px"
                                app:tint="@color/white_two"
                                android:layout_gravity="center"/>

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="left"
                                android:text="Sin comisión por apertura"
                                android:textColor="@color/white_two"
                                android:textSize="@dimen/_17sdp" />
                        </TableRow>

                        <TableRow
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/check_24_px"
                                app:tint="@color/white_two"
                                android:layout_gravity="center"/>

                            <TextView
                                style="@style/Graphik_Regular"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="left"
                                android:text="Único requisito INE vigente"
                                android:textColor="@color/white_two"
                                android:textSize="@dimen/_17sdp" />
                        </TableRow>

                        <TableRow
                            android:id="@+id/tr_adelanto"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:weightSum="1"
                            android:visibility="gone">

                            <ImageView
                                android:layout_width="0dp"
                                android:layout_weight="0.1"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@drawable/check_24_px"
                                app:tint="@color/white_two"
                                android:layout_gravity="center"/>

                            <TextView
                                style="@style/Graphik_Medium"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_weight="0.9"
                                android:gravity="left"
                                android:text="Pagas tu crédito sin salir de la tienda"
                                android:textColor="@color/white_two"
                                android:textSize="@dimen/_17sdp" />
                        </TableRow>

                    </TableLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="@dimen/_40sdp"
                        android:orientation="horizontal">

                        <ImageView
                            style="@style/Graphik_Medium"
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:gravity="center"
                            android:src="@drawable/icon_offer"/>

                        <TextView
                            style="@style/Graphik_Regular"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/txt_competition"
                            android:textColor="@color/white_two"
                            android:textSize="@dimen/_15sdp"
                            android:layout_gravity="center"
                            android:gravity="left"/>
                    </LinearLayout>

                    <Button
                        android:id="@+id/btn_accept"
                        style="@style/Graphik_Medium"
                        android:layout_width="@dimen/button_width"
                        android:layout_height="@dimen/_25sdp"
                        android:layout_gravity="center_horizontal"
                        android:layout_marginTop="@dimen/_25sdp"
                        android:background="@drawable/background_button_fc_white"
                        android:text="CONSÚLTALO SIN COMPROMISO"
                        android:textAllCaps="false"
                        android:textColor="@color/colorBimboBlueDark"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginBottom="@dimen/_25sdp"/>

                    <TextView
                        android:id="@+id/tv_simulator"
                        style="@style/Graphik_Regular"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:text="@string/txt_other_simulator"
                        android:textColor="@color/white_two"
                        android:textSize="@dimen/_12sdp"
                        android:layout_marginVertical="@dimen/_15sdp"
                        android:visibility="gone"/>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginBottom="@dimen/_5sdp"
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/background_rounded_blue_fincomun"
                    android:layout_marginHorizontal="@dimen/_15sdp">
                    <TextView
                        android:id="@+id/tv_information"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@color/FC_white"
                        android:text="@string/txt_cat"
                        android:gravity="center"/>
                </LinearLayout>


            </LinearLayout>

        </ScrollView>
    </LinearLayout>

</LinearLayout>