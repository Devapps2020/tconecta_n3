<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/main_layout"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center_vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical|right"
        android:padding="@dimen/_3sdp">

        <LinearLayout
            android:id="@+id/layout_cantidad"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_40sdp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_cantidad_label"
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="Cantidad"
                    android:textColor="@color/colorGrayDark"
                    android:textSize="@dimen/_10sdp" />

                <LinearLayout
                    android:layout_width="50dp"
                    android:layout_height="@dimen/_30sdp"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/edit_cantidad"
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_30sdp"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:hint="0"
                        android:textColor="@color/colorBimboBlueLight"
                        android:textSize="@dimen/_14sdp" />

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <Button
            android:visibility="gone"
            android:id="@+id/btn_add"
            style="@style/Graphik_Medium"
            android:layout_width="@dimen/_60sdp"
            android:layout_height="@dimen/_35sdp"
            android:text="AÃ±adir"
            android:textAllCaps="false"
            android:background="@drawable/background_button_principal_producto"
            android:textColor="@drawable/button_text_color"
            android:textSize="@dimen/_12sdp" />

    </LinearLayout>


</LinearLayout>