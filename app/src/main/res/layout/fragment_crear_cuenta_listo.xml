<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background_image_blue">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/header_height"
            android:layout_marginTop="@dimen/header_top">

            <ImageView
                android:id="@+id/img_user"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_user"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:layout_marginLeft="@dimen/_20sdp"/>

            <TextView
                style="@style/Graphik_Medium"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:text="Cuenta creada"
                android:textColor="@color/colorAccent"
                android:textSize="@dimen/_16sdp"/>

            <ImageView
                android:id="@+id/img_help"
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                android:tint="@color/colorAccent"
                android:src="@drawable/ic_user"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="@dimen/_20sdp"/>

        </RelativeLayout>

        <LinearLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="0dp"
                    android:text="@string/text_whats_1"
                    android:textColor="@color/colorWithe"
                    android:textSize="@dimen/_30sdp" />

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/_20sdp"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:text="@string/text_whats_2"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_18sdp"
                    android:textStyle="bold" />

                <TextView
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:text="@string/text_whats_3"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_12sdp"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/btn_vamos"
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/background_button_round_green"
                    android:text="Â¡Vamos!"
                    android:textAllCaps="false"
                    android:textColor="@color/colorAccent"
                    android:textSize="@dimen/_16sdp" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="2"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/background_gradient_blue">

                <TextView
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/element_width"
                    android:layout_height="wrap_content"
                    android:text="@string/text_whats_4"
                    android:textColor="@color/colorGray"
                    android:textSize="@dimen/_18sdp"
                    android:lineSpacingExtra="@dimen/_1sdp"
                    android:textStyle="bold"/>

                <Button
                    style="@style/Signika_Semibold"
                    android:layout_width="@dimen/button_width"
                    android:layout_height="@dimen/button_height"
                    android:text="Stick to cash"
                    android:textAllCaps="false"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:background="@drawable/background_button_round_green"
                    android:textSize="@dimen/_16sdp"
                    android:textColor="@color/colorAccent" />


            </LinearLayout>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>