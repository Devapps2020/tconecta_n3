<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white_two"
    android:orientation="horizontal">

    <LinearLayout
        android:id="@+id/llItemCoupon"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="8dp"
        android:orientation="horizontal"
        android:background="@drawable/item_coupon_shape"
        android:elevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.5"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/ivItemCoupon"
                android:layout_width="56dp"
                android:layout_height="56dp"
                android:layout_weight="1.5"
                android:src="@drawable/illustrations_lector_115_x_95"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginTop="12dp"
            android:layout_marginBottom="12dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tvItemCouponTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/coupons_chambita_name"
                android:textStyle="bold"
                android:textColor="@color/dusk_blue"
                android:textSize="14dp"/>

            <TextView
                android:id="@+id/tvItemCouponValidity"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="2dp"
                android:text="@string/coupons_validity"
                android:textColor="@color/FC_grey_1"
                android:textSize="12dp"/>

            <TextView
                android:id="@+id/tvItemCouponDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/coupons_description"
                android:textColor="@color/FC_grey_1"
                android:textSize="12dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="2.85"
            android:paddingRight="12dp"
            android:gravity="center_vertical|right"
            android:orientation="vertical">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/ic_chevron_right"
                app:tint="@color/clear_blue" />

        </LinearLayout>

    </LinearLayout>

</LinearLayout>