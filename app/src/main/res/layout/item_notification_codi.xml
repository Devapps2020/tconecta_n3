<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/main_layout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:gravity="center"
    android:background="@color/background"
    android:paddingTop="@dimen/_5sdp"
    android:paddingBottom="@dimen/_5sdp">

    <LinearLayout
        android:gravity="center"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_75sdp">

        <LinearLayout
            android:background="@drawable/background_button_tabs_1"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="@dimen/_50sdp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:background="@drawable/background_notification_codi"
                android:gravity="center">

                <TextView
                    android:id="@+id/text_dia"
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="0dp"
                    android:text="10"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/text_mes"
                    style="@style/Graphik_Regular"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="0dp"
                    android:text="Ago"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_12sdp"
                    android:layout_marginTop="@dimen/_5sdp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_weight="1"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:gravity="center_vertical"
                android:padding="@dimen/_5sdp"
                android:layout_marginLeft="@dimen/_5sdp">

                <TextView
                    android:id="@+id/text_titulo"
                    style="@style/Graphik_Medium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:padding="0dp"
                    android:text="CoDi"
                    android:textColor="@color/colorBimboBlueDark"
                    android:textSize="@dimen/_14sdp" />

                <TextView
                    android:id="@+id/text_mensaje"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ellipsize="end"
                    android:gravity="left"
                    android:maxLines="2"
                    android:minLines="1"
                    android:layout_weight="1"
                    android:text="5512345678"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textColor="@color/colorBimboGrayDark"
                    android:textSize="@dimen/_12sdp" />

                <TextView
                    android:id="@+id/text_hora"
                    style="@style/Graphik_Regular"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:gravity="left"
                    android:text="11:00"
                    android:textColor="@color/colorBimboGrayBimbo"
                    android:textSize="@dimen/_9sdp"/>

            </LinearLayout>

            <ImageView
                android:id="@+id/img_more"
                android:visibility="gone"
                android:layout_width="@dimen/_35sdp"
                android:layout_height="match_parent"
                android:padding="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:src="@drawable/ic_more_back"
                android:tint="@color/colorGray" />

        </LinearLayout>


    </LinearLayout>


</LinearLayout>