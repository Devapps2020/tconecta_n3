<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/dialog_background"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingLeft="@dimen/_20sdp"
        android:paddingRight="@dimen/_20sdp"
        android:paddingBottom="@dimen/_10sdp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginTop="@dimen/_15sdp"
            android:gravity="center"
            android:text="Conoce nuestro Retiro sin tarjeta"
            android:textColor="@color/white"
            android:textSize="@dimen/_12sdp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/text_mensaje"
            style="@style/Graphik_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_10sdp"
            android:text="Ahora podrás realizar retiros sin\ntarjeta de tus cuentas Fincomún"
            android:textColor="@color/colorBimboWithe"
            android:textSize="@dimen/_12sdp" />

        <ImageView
            android:layout_width="@dimen/_200sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/retiro_1" />

        <TextView
            style="@style/Graphik_Regular"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="@dimen/_20sdp"
            android:text="- Sin comisión por introducción\n- Utiliza tu celular para retirar dinero\n- Fácil, Rápido y seguro"
            android:textColor="@color/colorBimboWithe"
            android:textSize="@dimen/_10sdp"
            android:gravity="left"/>

        <Button
            android:id="@+id/btn_solicitar"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/background_selector_green"
            android:text="Solicitar retiro sin tarjeta"
            android:textAllCaps="false"
            android:textColor="@drawable/button_text_color"
            android:textSize="@dimen/_12sdp" />

        <Button
            android:id="@+id/btn_cancelar"
            style="@style/Signika_Semibold"
            android:layout_width="@dimen/_170sdp"
            android:layout_height="@dimen/_30sdp"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/background_button_round_white"
            android:text="Regresar a Mis Préstamos"
            android:textAllCaps="false"
            android:textColor="@color/colorBimboBlueDark"
            android:textSize="@dimen/_12sdp" />


    </LinearLayout>

</LinearLayout>